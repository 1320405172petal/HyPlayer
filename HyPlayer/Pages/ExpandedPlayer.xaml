<Page
    x:Class="HyPlayer.Pages.ExpandedPlayer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HyPlayer.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource SystemControlAcrylicElementBrush}">

    <Grid
        Background="{ThemeResource SystemControlAcrylicElementBrush}"
        Margin="0,0,0,0">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger
                            MinWindowWidth="0">
                            <!--小窗模式 -->
                        </AdaptiveTrigger>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter
                            Target="ImageAlbum.(Grid.Column)"
                            Value="0" />
                        <Setter
                            Target="ImageAlbum.(Grid.ColumnSpan)"
                            Value="12" />
                        <Setter
                            Target="ImageAlbum.(Grid.Row)"
                            Value="0" />
                        <Setter
                            Target="ImageAlbum.(Grid.RowSpan)"
                            Value="13" />
                        <Setter
                            Target="DockPanelRight.Visibility"
                            Value="Collapsed"/>
                        <Setter
                            Target="BtnPlayStateChange.Visibility"
                            Value="Visible"/>
                        <Setter
                            Target="BtnPreviousSong.Visibility"
                            Value="Visible"/>
                        <Setter
                            Target="BtnNextSong.Visibility"
                            Value="Visible"/>
                        <Setter
                            Target="ProgressBarPlayProg.Visibility"
                            Value="Visible"/>
                        <Setter
                            Target="SliderVolumn.Visibility"
                            Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger
                            MinWindowWidth="250">
                            <!--正常模式 -->
                        </AdaptiveTrigger>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter
                            Target="ImageAlbum.(Grid.Column)"
                            Value="1" />
                        <Setter
                            Target="ImageAlbum.(Grid.ColumnSpan)"
                            Value="4" />
                        <Setter
                            Target="ImageAlbum.(Grid.Row)"
                            Value="2" />
                        <Setter
                            Target="ImageAlbum.(Grid.RowSpan)"
                            Value="8" />
                        <Setter
                            Target="DockPanelRight.Visibility"
                            Value="Visible"/>
                        <Setter
                            Target="BtnPlayStateChange.Visibility"
                            Value="Collapsed"/>
                        <Setter
                            Target="BtnPreviousSong.Visibility"
                            Value="Collapsed" />
                        <Setter
                            Target="BtnNextSong.Visibility"
                            Value="Collapsed" />
                        <Setter
                            Target="ProgressBarPlayProg.Visibility"
                            Value="Collapsed" />
                        <Setter
                            Target="SliderVolumn.Visibility"
                            Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Image
            DoubleTapped="ImageAlbum_OnDoubleTapped"
            x:FieldModifier="public"
            Grid.Column="1"
            Grid.ColumnSpan="4"
            Grid.Row="2"
            Grid.RowSpan="8"
            Name="ImageAlbum"
            Source="/Assets/Icon.png" />
        <Button
            Visibility="Collapsed"
            Grid.Row="4"
            Grid.RowSpan="4"
            Style="{StaticResource ButtonRevealStyle}"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Name="BtnPreviousSong"
            Click="BtnPreSong_OnClick"
            VerticalAlignment="Center"
            Background="Transparent"
            Width="45"
            Height="45"
            CornerRadius="30">
            <FontIcon
                FontFamily="{StaticResource SymbolThemeFontFamily}"
                Glyph="&#xE892;"></FontIcon>
        </Button>
        <Button
            Visibility="Collapsed"
            Grid.RowSpan="6"
            Grid.Row="3"
            Style="{StaticResource ButtonRevealStyle}"
            Name="BtnPlayStateChange"
            Width="50"
            Height="50"
            Grid.Column="4"
            Grid.ColumnSpan="4"
            VerticalAlignment="Center"
            Click="BtnPlayStateChange_OnClick"
            CornerRadius="30">
            <FontIcon
                Name="PlayStateIcon"
                FontFamily="{StaticResource SymbolThemeFontFamily}"
                Glyph="&#xEDB4;"></FontIcon>
            <!--EDB5 -->
        </Button>
        <Button
            Visibility="Collapsed"
            Grid.Row="4"
            Grid.RowSpan="4"
            Style="{StaticResource ButtonRevealStyle}"
            Grid.Column="8"
            Grid.ColumnSpan="4"
            Name="BtnNextSong"
            Click="BtnNextSong_OnClick"
            VerticalAlignment="Center"
            Background="Transparent"
            Width="45"
            Height="45"
            CornerRadius="30">
            <FontIcon
                FontFamily="{StaticResource SymbolThemeFontFamily}"
                Glyph="&#xE101;"></FontIcon>
        </Button>
        <Slider
            Visibility="Collapsed"
            ValueChanged="SliderAudioRate_ValueChanged"
            Name="SliderVolumn"
            Grid.Column="1"
            Grid.ColumnSpan="10"
            Grid.Row="9"
            Grid.RowSpan="3"/>
        <controls:DockPanel
            x:Name="DockPanelRight"
            LastChildFill="True"
            Grid.Row="1"
            Margin="0,0,0,100"
            Grid.RowSpan="12"
            Grid.ColumnSpan="5"
            Grid.Column="6">
            <TextBlock
                controls:DockPanel.Dock="Top"
                FontSize="30"
                x:FieldModifier="public"
                TextAlignment="Center"
                Name="TextBlockSongTitle"
                Text="歌曲名" />
            <TextBlock
                controls:DockPanel.Dock="Top"
                x:FieldModifier="public"
                TextAlignment="Center"
                Name="TextBlockSinger"
                Foreground="Gray"
                FontSize="20"
                Text="歌手" />
            <ScrollViewer
                x:FieldModifier="public"
                x:Name="LyricBoxContainer"
                VerticalScrollBarVisibility="Hidden"
                HorizontalScrollBarVisibility="Hidden">
                <ScrollViewer.Content>
                    <StackPanel
                        PointerWheelChanged="LyricBoxContainer_OnPointerWheelChanged"
                        Name="LyricBox"
                        Orientation="Vertical"
                        ScrollViewer.VerticalScrollBarVisibility="Auto" />
                </ScrollViewer.Content>
            </ScrollViewer>
        </controls:DockPanel>
        <ProgressBar
            Name="ProgressBarPlayProg"
            Visibility="Collapsed"
            Grid.Column="0"
            Grid.ColumnSpan="12"
            Grid.Row="12"
            Value="0" />
    </Grid>
</Page>
