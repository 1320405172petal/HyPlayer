<Page
    x:Class="HyPlayer.Pages.ExpandedPlayer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    NavigationCacheMode="Disabled"
    PointerEntered="ExpandedPlayer_OnPointerEntered"
    PointerExited="ExpandedPlayer_OnPointerExited"
    mc:Ignorable="d">
    <Grid Background="{ThemeResource ExpandedPlayerMask}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <!--  Title Bar  -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid
            x:Name="AppTitleBar"
            Grid.Row="0"
            Grid.Column="0"
            Background="Transparent" />
        <!--  小窗  -->
        <Grid
            x:Name="StackPanelTiny"
            Grid.Row="1"
            Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button
                Name="BtnPreviousSong"
                Grid.Row="1"
                Grid.Column="0"
                Width="45"
                Height="45"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Transparent"
                Click="BtnPreSong_OnClick"
                CornerRadius="30"
                Style="{StaticResource ButtonRevealStyle}">
                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE892;" />
            </Button>
            <Button
                Name="BtnPlayStateChange"
                Grid.Row="1"
                Grid.Column="1"
                Width="50"
                Height="50"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="BtnPlayStateChange_OnClick"
                CornerRadius="30"
                Style="{StaticResource ButtonRevealStyle}">
                <FontIcon
                    Name="PlayStateIcon"
                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                    Glyph="&#xEDB4;" />
                <!--  EDB5  -->
            </Button>
            <Button
                Name="BtnNextSong"
                Grid.Row="1"
                Grid.Column="2"
                Width="45"
                Height="45"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Transparent"
                Click="BtnNextSong_OnClick"
                CornerRadius="30"
                Style="{StaticResource ButtonRevealStyle}">
                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE101;" />
            </Button>
            <Slider
                Name="SliderVolumn"
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Margin="20,0,20,0"
                x:FieldModifier="public"
                ValueChanged="SliderAudioRate_ValueChanged" />
            <ProgressBar
                Name="ProgressBarPlayProg"
                Grid.Row="3"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Visibility="Collapsed"
                Value="50" />
        </Grid>
        <Grid
            x:Name="MainGrid"
            Grid.Row="1"
            Margin="0,0,0,120"
            Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid x:Name="LeftPanel" MaxWidth="600">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="4*" />
                </Grid.RowDefinitions>
                <controls:DropShadowPanel
                    x:Name="AlbumDropShadow"
                    Grid.Row="1"
                    MaxWidth="600"
                    MaxHeight="600"
                    Margin="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BlurRadius="20"
                    IsMasked="True"
                    OffsetX="5"
                    OffsetY="5"
                    ShadowOpacity="0.8"
                    Color="Black">
                    <controls:ImageEx
                        x:Name="ImageAlbum"
                        x:FieldModifier="public"
                        CornerRadius="12"
                        IsCacheEnabled="False"
                        PlaceholderStretch="Uniform"
                        RightTapped="ImageAlbum_RightTapped"
                        Stretch="Uniform">
                        <FlyoutBase.AttachedFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem
                                    Click="SaveAlbumImage_Click"
                                    Icon="Save"
                                    Text="保存图片" />
                            </MenuFlyout>
                        </FlyoutBase.AttachedFlyout>
                    </controls:ImageEx>
                </controls:DropShadowPanel>
                <StackPanel
                    x:Name="SongInfo"
                    Grid.Row="2"
                    MaxWidth="600"
                    Margin="20"
                    HorizontalAlignment="Stretch"
                    Orientation="Vertical"
                    Spacing="10">
                    <TextBlock
                        Name="TextBlockSongTitle"
                        x:FieldModifier="public"
                        DoubleTapped="ToggleWindowShowMode"
                        FontSize="35"
                        FontWeight="Bold"
                        Text="歌曲名"
                        TextAlignment="Left" />
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <TextBlock
                            Padding="0,6,0,6"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Text="歌手: "
                            TextAlignment="Center" />
                        <HyperlinkButton
                            Name="TextBlockSinger"
                            Click="TextBlockSinger_OnTapped"
                            FontSize="18" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <TextBlock
                            Padding="0,6,0,6"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Text="专辑: "
                            TextAlignment="Center" />
                        <HyperlinkButton
                            Name="TextBlockAlbum"
                            Click="TextBlockAlbum_OnTapped"
                            FontSize="18" />
                    </StackPanel>
                </StackPanel>
            </Grid>
            <Grid x:Name="RightPanel" Grid.Column="1">
                <StackPanel
                    HorizontalAlignment="Center"
                    controls:DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    Spacing="15"
                    Visibility="Collapsed">
                    <ToggleButton
                        Name="ToggleButtonTranslation"
                        Click="ToggleButtonTranslation_OnClick"
                        Content="译" />
                    <ToggleButton
                        Name="ToggleButtonSound"
                        Click="ToggleButtonSound_OnClick"
                        Content="音" />
                </StackPanel>
                <ScrollViewer
                    x:Name="LyricBoxContainer"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    x:FieldModifier="public"
                    HorizontalScrollBarVisibility="Hidden"
                    VerticalScrollBarVisibility="Hidden">
                    <ScrollViewer.Content>
                        <StackPanel
                            Name="LyricBox"
                            Orientation="Vertical"
                            PointerWheelChanged="LyricBoxContainer_OnPointerWheelChanged"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            Spacing="15">
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <TextBlock HorizontalAlignment="Center" Text="当前暂未播放歌曲" />
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer.Content>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Page>