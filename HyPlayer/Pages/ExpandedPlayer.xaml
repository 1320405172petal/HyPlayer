<Page
    x:Class="HyPlayer.Pages.ExpandedPlayer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:hyplayer="using:HyPlayer"
    NavigationCacheMode="Disabled"
    mc:Ignorable="d">
    <!--  Grid Beam~  -->
    <Grid x:Name="PageContainer" Background="{ThemeResource ExpandedPlayerMask}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <!--  Title Bar  -->
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid
            x:Name="AppTitleBar"
            Grid.Row="0"
            Grid.Column="0"
            Background="Transparent" />
        <!--  小窗  -->
        <Grid
            x:Name="StackPanelTiny"
            Grid.Row="1"
            Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button
                Name="BtnPreviousSong"
                Grid.Row="1"
                Grid.Column="0"
                Width="45"
                Height="45"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Transparent"
                Click="BtnPreSong_OnClick"
                CornerRadius="30"
                Style="{StaticResource ButtonRevealStyle}">
                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE892;" />
            </Button>
            <Button
                Name="BtnPlayStateChange"
                Grid.Row="1"
                Grid.Column="1"
                Width="50"
                Height="50"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="BtnPlayStateChange_OnClick"
                CornerRadius="30"
                Style="{StaticResource ButtonRevealStyle}">
                <FontIcon
                    Name="PlayStateIcon"
                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                    Glyph="&#xEDB4;" />
                <!--  EDB5  -->
            </Button>
            <Button
                Name="BtnNextSong"
                Grid.Row="1"
                Grid.Column="2"
                Width="45"
                Height="45"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Transparent"
                Click="BtnNextSong_OnClick"
                CornerRadius="30"
                Style="{StaticResource ButtonRevealStyle}">
                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE101;" />
            </Button>
            <Slider
                Name="SliderVolumn"
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Margin="20,0,20,0"
                x:FieldModifier="public"
                ValueChanged="SliderAudioRate_ValueChanged" />
            <ProgressBar
                Name="ProgressBarPlayProg"
                Grid.Row="3"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Visibility="Collapsed"
                Value="50" />
        </Grid>
        <Grid
            x:Name="MainGrid"
            Grid.Row="1"
            Margin="0,0,0,80"
            Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <ScrollViewer VerticalScrollMode="Disabled" Canvas.ZIndex="0" VerticalScrollBarVisibility="Hidden"  HorizontalScrollMode="Disabled" MinWidth="600"  x:Name="UIAugmentationSys">
                <Grid x:Name="LeftPanel" MaxWidth="600">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10*" />
                    </Grid.RowDefinitions>
                    <controls:DropShadowPanel
                    x:Name="AlbumDropShadow"
                    Grid.Row="1"
                    MaxWidth="600"
                    MaxHeight="600"
                    Margin="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BlurRadius="20"
                    IsMasked="True"
                    OffsetX="0"
                    OffsetY="4"
                    ShadowOpacity="0.4"
                    Color="Black">
                        <controls:ImageEx
                        x:Name="ImageAlbum"
                        x:FieldModifier="public"
                        CornerRadius="12"
                        IsCacheEnabled="False"
                        PlaceholderStretch="Uniform"
                        RightTapped="{x:Bind hyplayer:Common.UIElement_RightTapped}"
                        Tapped="ImageAlbum_Tapped"
                        Source="/Assets/icon.png"
                        Stretch="Uniform">
                            <FlyoutBase.AttachedFlyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem Style="{StaticResource MenuFlyoutItemRevealStyle}"
                                    Click="SaveAlbumImage_Click"
                                    Icon="Save"
                                    Text="保存图片" />
                                    <MenuFlyoutItem Style="{StaticResource MenuFlyoutItemRevealStyle}"
                                    Click="CopySongName_Click"
                                    Icon="Copy"
                                    Text="复制歌名" />
                                </MenuFlyout>
                            </FlyoutBase.AttachedFlyout>
                        </controls:ImageEx>
                    </controls:DropShadowPanel>
                    <StackPanel
                    x:Name="SongInfo"
                    Grid.Row="2"
                    MaxWidth="600"
                    Margin="20"
                    HorizontalAlignment="Stretch"
                    CornerRadius="12"
                    Orientation="Vertical"
                    Spacing="5">
                        <TextBlock
                        Name="TextBlockSongTitle"
                        x:FieldModifier="public"
                        FontSize="35"
                        FontWeight="Bold"
                        Text="歌曲名"
                        TextAlignment="Left" />
                        <StackPanel Orientation="Horizontal" Spacing="5" x:Name="SongInfoContainer">
                            <TextBlock
                            Padding="0,6,0,6"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="{x:Bind TextBlockSongTitle.Foreground}"
                            Text="歌手: "
                            TextAlignment="Center" />
                            <HyperlinkButton
                            Name="TextBlockSinger"
                            Click="TextBlockSinger_OnTapped"
                            FontSize="18" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <TextBlock
                            Padding="0,6,0,6"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="{x:Bind TextBlockSongTitle.Foreground}"
                            Text="专辑: "
                            TextAlignment="Center" />
                            <HyperlinkButton
                            Name="TextBlockAlbum"
                            Click="TextBlockAlbum_OnTapped"
                            FontSize="18" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
            <Grid x:Name="RightPanel" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
                <ScrollViewer
                    x:Name="LyricBoxContainer"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    x:FieldModifier="public"
                    HorizontalScrollBarVisibility="Hidden"
                    RightTapped="LyricBoxContainer_RightTapped"
                    VerticalScrollBarVisibility="Hidden">
                    <ScrollViewer.ContextFlyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Style="{StaticResource MenuFlyoutItemRevealStyle}" Click="BtnLoadLocalLyric" Text="加载本地歌词">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE160;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </ScrollViewer.ContextFlyout>
                    <ScrollViewer.Content>
                        <StackPanel
                            Name="LyricBox"
                            Orientation="Vertical"
                            PointerWheelChanged="LyricBoxContainer_OnPointerWheelChanged"
                            Tapped="LyricBox_Tapped"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            Spacing="15">
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <TextBlock HorizontalAlignment="Center" Text="当前暂未播放歌曲" />
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer.Content>
                </ScrollViewer>
            </Grid>
            <Button Style="{StaticResource ButtonRevealStyle}" 
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Width="40"
                Height="40"
                Margin="0,0,27,50"
                Padding="-5"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Background="Transparent"
                BorderThickness="0"
                CornerRadius="30">
                <Button.Flyout>
                    <MenuFlyout>
                        <ToggleMenuFlyoutItem
                            Name="ToggleButtonTranslation"
                            Click="ToggleButtonTranslation_OnClick"
                            Text="显示翻译">
                            <ToggleMenuFlyoutItem.Icon>
                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE982;" />
                            </ToggleMenuFlyoutItem.Icon>
                        </ToggleMenuFlyoutItem>
                        <ToggleMenuFlyoutItem
                            Name="ToggleButtonSound"
                            Click="ToggleButtonSound_OnClick"
                            Text="转罗马音">
                            <ToggleMenuFlyoutItem.Icon>
                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE986;" />
                            </ToggleMenuFlyoutItem.Icon>
                        </ToggleMenuFlyoutItem>
                        <MenuFlyoutSeparator />
                        <ToggleMenuFlyoutItem
                            x:Name="BtnToggleFullScreen"
                            HorizontalAlignment="Center"
                            Background="Transparent"
                            Click="BtnToggleFullScreen_Checked"
                            Text="全屏模式">
                            <ToggleMenuFlyoutItem.Icon>
                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE1D9;" />
                            </ToggleMenuFlyoutItem.Icon>
                        </ToggleMenuFlyoutItem>
                        <ToggleMenuFlyoutItem
                            x:Name="BtnToggleTinyMode"
                            HorizontalAlignment="Center"
                            Background="Transparent"
                            Click="BtnToggleFullScreen_Checked"
                            Text="小窗模式">
                            <ToggleMenuFlyoutItem.Icon>
                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE2B3;" />
                            </ToggleMenuFlyoutItem.Icon>
                        </ToggleMenuFlyoutItem>
                        <MenuFlyoutSeparator />
                        <ToggleMenuFlyoutItem
                            x:Name="BtnToggleAlbum"
                            HorizontalAlignment="Left"
                            Background="Transparent"
                            Click="BtnToggleWindowsMode_Checked"
                            Text="专辑封面">
                            <ToggleMenuFlyoutItem.Icon>
                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE15A;" />
                            </ToggleMenuFlyoutItem.Icon>
                        </ToggleMenuFlyoutItem>
                        <ToggleMenuFlyoutItem
                            x:Name="BtnToggleLyric"
                            HorizontalAlignment="Right"
                            Background="Transparent"
                            Click="BtnToggleWindowsMode_Checked"
                            Text="歌词界面">
                            <ToggleMenuFlyoutItem.Icon>
                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE1A1;" />
                            </ToggleMenuFlyoutItem.Icon>
                        </ToggleMenuFlyoutItem>
                    </MenuFlyout>
                </Button.Flyout>
                <Button.Content>
                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xEDE3;" />
                </Button.Content>
            </Button>
        </Grid>

    </Grid>
</Page>