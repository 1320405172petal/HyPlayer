<Page
    mc:Ignorable="d"
    x:Class="HyPlayer.Pages.ArtistPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:controls1="using:HyPlayer.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="150" />
        </Grid.RowDefinitions>
        <controls:DockPanel
            Grid.Row="0"
            LastChildFill="True"
            x:Name="GridPersonalInformation">
            <Rectangle
                Height="250"
                Margin="15"
                RadiusX="10"
                RadiusY="10"
                Width="250"
                controls:DockPanel.Dock="Left"
                x:Name="RectangleImage">
                <Rectangle.Fill>
                    <ImageBrush Stretch="UniformToFill" x:Name="ImageRect" />
                </Rectangle.Fill>
            </Rectangle>
            <StackPanel
                Margin="15,15,144,0"
                Name="StackPanelUserInfo"
                Orientation="Vertical">
                <TextBlock
                    FontSize="40"
                    FontWeight="ExtraBold"
                    Margin="0,0,0,0"
                    Name="TextBoxArtistName"
                    Text="歌手名"
                    TextWrapping="Wrap" />
                <TextBlock
                    FontSize="25"
                    Margin="0,2,0,0"
                    Name="TextboxArtistNameTranslated"
                    Text="歌手别名" />
                <TextBlock
                    FontSize="15"
                    Margin="0,5,0,0"
                    MaxLines="7"
                    Text="歌手简介"
                    TextWrapping="WrapWholeWords"
                    x:Name="TextBlockDesc" />
                <TextBlock
                    FontSize="15"
                    Margin="0,10,0,0"
                    MaxLines="7"
                    Text="歌手简略信息"
                    x:Name="TextBlockInfo" />
            </StackPanel>
        </controls:DockPanel>
        <StackPanel
            Grid.Row="1"
            Margin="45,30,0,0"
            Orientation="Horizontal"
            Spacing="15">
            <Button
                Click="ButtonPlayAll_OnClick"
                Content="播放全部"
                Name="ButtonPlayAll"
                Style="{StaticResource ButtonRevealStyle}" />
        </StackPanel>
        <Pivot
            Grid.Row="2"
            SelectionChanged="Pivot_SelectionChanged"
            x:Name="mp">
            <PivotItem Header="热门50首">
                <controls1:SongsList
                    Margin="20,10,0,0"
                    Songs="{x:Bind hotSongs, Mode=OneWay}"
                    x:Name="HotSongContainer" />
            </PivotItem>
            <PivotItem Header="全部歌曲">
                <controls1:SongsList
                    Margin="20,10,0,0"
                    Songs="{x:Bind allSongs, Mode=OneWay}"
                    x:Name="AllSongContainer" />
            </PivotItem>
            <PivotItem Header="专辑">
                <controls1:SimpleLinerList Margin="20,10,0,0" x:Name="AlbumContainer" />
            </PivotItem>
        </Pivot>
        <StackPanel
            Grid.Row="3"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Click="PrevPage_Click"
                Content="上一页"
                Style="{StaticResource ButtonRevealStyle}"
                Visibility="Collapsed"
                x:Name="PrevPage" />
            <TextBlock x:Name="PageIndicator" />
            <Button
                Click="NextPage_Click"
                Content="下一页"
                Style="{StaticResource ButtonRevealStyle}"
                Visibility="Collapsed"
                x:Name="NextPage" />
        </StackPanel>
    </Grid>


    <VisualStateManager.VisualStateGroups>
        <VisualStateGroup>
            <VisualState>
                <VisualState.StateTriggers>
                    <AdaptiveTrigger MinWindowWidth="0" />
                </VisualState.StateTriggers>
                <VisualState.Setters>
                    <Setter Target="RectangleImage.Visibility" Value="Collapsed" />
                    <Setter Target="StackPanelUserInfo.(Grid.Column)" Value="1" />
                    <Setter Target="StackPanelUserInfo.(Grid.ColumnSpan)" Value="10" />
                </VisualState.Setters>
            </VisualState>
            <VisualState>
                <VisualState.StateTriggers>
                    <AdaptiveTrigger MinWindowWidth="1024" />
                </VisualState.StateTriggers>
                <VisualState.Setters>
                    <Setter Target="RectangleImage.Visibility" Value="Visible" />
                    <Setter Target="StackPanelUserInfo.(Grid.Column)" Value="5" />
                    <Setter Target="StackPanelUserInfo.(Grid.ColumnSpan)" Value="6" />
                </VisualState.Setters>
            </VisualState>
        </VisualStateGroup>
    </VisualStateManager.VisualStateGroups>
</Page>