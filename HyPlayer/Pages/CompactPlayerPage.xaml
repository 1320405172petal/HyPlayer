<Page
    x:Class="HyPlayer.Pages.CompactPlayerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HyPlayer.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Background="White"
    d:DesignHeight="350"
    d:DesignWidth="600"
    Background="{x:Bind Mode=OneWay, Path=AlbumCover}"
    IsRightTapEnabled="True"
    PointerEntered="CompactPlayerPage_OnPointerEntered"
    PointerExited="CompactPlayerPage_OnPointerExited"
    RightTapped="OnRightTapped"
    mc:Ignorable="d">

    <Grid
        Background="{x:Bind Mode=OneWay, Path=ControlHover}"
        DoubleTapped="ExitCompactMode"
        IsTapEnabled="True">
        <Grid.RowDefinitions>
            <!--  Placeholder  -->
            <RowDefinition Height="72" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="38" />
            <!--  Progress Bar  -->
            <RowDefinition Height="4" />
        </Grid.RowDefinitions>
        <Grid
            x:Name="SongNameContainer"
            Grid.Row="0"
            CornerRadius="8"
            Background="{ThemeResource PlaybackAcrylicInAppLuminosity}">
            <Rectangle
                Grid.RowSpan="2"
                Height="56"
                Width="56"
                Margin="9,0,0,0 "
                HorizontalAlignment="Left"
                Fill="{x:Bind Mode=OneWay, Path=AlbumCover}"
                RadiusX="8"
                RadiusY="8"
                >
            </Rectangle>
            <TextBlock
                Grid.Row="1"
                FontSize="12"
                Foreground="White"
                Text="{x:Bind NowPlayingArtists, Mode=OneWay}"
                TextAlignment="Left"
                VerticalAlignment="Bottom"
                Margin=" 76,0,0,22"/>
            <TextBlock
                Grid.Row="0"
                Grid.ColumnSpan="2"
                FontSize="20"
                FontWeight="Bold"
                Foreground="White"
                VerticalAlignment="Top" 
                Text="{x:Bind NowPlayingName, Mode=OneWay}"
                TextAlignment="Left"  
                Margin="75,4,0,0"
                />
        </Grid>
        <Grid x:Name="GridBtns" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1* "/>
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="7*" />
                <ColumnDefinition Width="1* "/>
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="1* "/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions >
                <RowDefinition Height="1*"/>
                <RowDefinition Height="6*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Button
                Grid.Column="1"
                Grid.Row="1"
                Margin="2"
                Padding="0"
                MaxHeight="100"
                Background="{ThemeResource SystemRevealAltLowColor}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                CornerRadius=" 12"
                Click="MovePrevious"
                Style="{StaticResource ButtonRevealStyle}">
                <FontIcon  Glyph="&#xE892;" Foreground="White" />
            </Button>
            <Button
                x:Name="BtnPlayStateChange"
                Grid.Column="3"
                Grid.Row="1"
                Margin="2"
                CornerRadius=" 12"
                MaxHeight=" 100"
                Padding="0"
                HorizontalAlignment="Stretch"
                Background="{ThemeResource SystemRevealAltMediumLowColor}"
                VerticalAlignment="Stretch"
                AutomationProperties.AcceleratorKey="Space"
                Click="ChangePlayState"
                Style="{StaticResource ButtonRevealStyle}" Foreground="{ThemeResource SystemAccentColorLight2}">
                <FontIcon
                    x:Name="PlayStateIcon"
                    Glyph="&#xEDB5;"
                    FontSize="26"/>
                <!--  EDB4  -->
            </Button>
            <Button
                Grid.Column="5"
                Grid.Row="1"
                Margin="2"
                MaxHeight=" 100"
                Padding="0"
                CornerRadius=" 12"
                HorizontalAlignment="Stretch"
                Background="{ThemeResource SystemRevealAltLowColor}"
                VerticalAlignment="Stretch"
                Click="MoveNext"
                Style="{StaticResource ButtonRevealStyle}">
                <FontIcon Glyph="&#xE893;" Foreground="White"  />
            </Button>
        </Grid>
        <Grid x:Name="GridLyrics" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <controls:DropShadowPanel
                Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BlurRadius="10"
                IsMasked="True"
                ShadowOpacity="15"
                Color="Black">
                <TextBlock
                    Foreground="White"
                    Text="{x:Bind LyricText, Mode=OneWay}"
                    TextAlignment="Center" />
            </controls:DropShadowPanel>
            <controls:DropShadowPanel
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BlurRadius="10"
                IsMasked="True"
                ShadowOpacity="15"
                Color="Black">
                <TextBlock
                    Foreground="White"
                    Text="{x:Bind LyricTranslation, Mode=OneWay}"
                    TextAlignment="Center" />
            </controls:DropShadowPanel>
        </Grid>
        <ProgressBar
            Grid.Row="3"
            d:Value="62"
            Maximum="{x:Bind Mode=OneWay, Path=TotalProgress}"
            Value="{x:Bind Mode=OneWay, Path=NowProgress}" />
    </Grid>
</Page>