<Page
    x:Class="HyPlayer.Pages.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:controls1="using:HyPlayer.Controls"
    mc:Ignorable="d">

    <Pivot Title="设置" FontFamily="Black" Margin="0,0,0,150">
        <PivotItem Header="歌词设置" FontFamily="Thick" Margin="30,10,0,0">
            <StackPanel Orientation="Vertical" x:Name="StackPanelLyricSet">
                <TextBlock
                        Text="罗马音设置"
                        FontSize="36" />
                <TextBlock
                        Margin="0,10,0,0"
                        x:Name="RomajiStatus"
                        Text="获取中" />
                <Button
                        Margin="0,10,0,0"
                        Click="ButtonBase_OnClick"
                        Content="获取罗马音资源文件" />
                <TextBlock
                        Text="歌词大小设置"
                        FontSize="36" />
                <controls:NumberBox
                        x:Name="LyricSize"
                        Margin="0,10,0,0"
                        ValueChanged="LyricSize_OnValueChanged"
                        Width="100"
                        Header="负数为自动"
                        Value="1"
                        SpinButtonPlacementMode="Compact"
                        SmallChange="1"
                        LargeChange="5" />
                <CheckBox Content="是否左对齐"
                              x:Name="CheckBoxAlignment"
                              Checked="CheckBoxAlignment_OnChecked"
                              Unchecked="CheckBoxAlignment_OnChecked" />
            </StackPanel>
        </PivotItem>
        <PivotItem Header="在线播放设置" FontFamily="Thick">
            <StackPanel Orientation="Vertical">
                <controls:RadioButtons
                        MaxColumns="4"
                        Header="在线播放音质:"
                        FontSize="20"
                        x:Name="RadioButtonsSongBr">
                    <RadioButton
                            Content="标准 (128k)"
                            Tag="128000"
                            Checked="RadioButton_Checked" />
                    <RadioButton
                            Content="较高 (192k)"
                            Tag="192000"
                            Checked="RadioButton_Checked" />
                    <RadioButton
                            Content="极高 (320k)"
                            Tag="320000"
                            Checked="RadioButton_Checked" />
                    <RadioButton
                            Content="无损 (VIP)"
                            Tag="999000"
                            Checked="RadioButton_Checked" />
                </controls:RadioButtons>
            </StackPanel>
        </PivotItem>
        <PivotItem Header="存储设置" FontFamily="Thick">
            <StackPanel Orientation="Vertical">
                <Grid
                        MaxWidth="1000">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                                Width="100" />
                        <ColumnDefinition
                                Width="*" />
                        <ColumnDefinition
                                Width="50" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                            Grid.Column="0"
                            Text="下载路径" />
                    <TextBlock
                            Grid.Column="1"
                            x:Name="TextBoxDownloadDir" />
                    <Button
                            Grid.Column="2"
                            x:Name="ButtonDownloadSelect"
                            Content="选择"
                            Click="ButtonDownloadSelect_OnClick" />
                </Grid>
                <Button
                        Content="清除历史记录"
                        Click="ClearHistory_Click"
                        x:Name="ClearHistory" />
            </StackPanel>
        </PivotItem>
        <PivotItem Header="实验室" FontFamily="Thick">
            <StackPanel Orientation="Vertical">
                <CheckBox
                        x:Name="AnimationCheckbox"
                        Content="是否开启可选动效"
                        Checked="AnimationCheckbox_Checked"
                        Unchecked="AnimationCheckbox_Checked" />
                <Grid
                        MaxWidth="1000">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                                Width="100" />
                        <ColumnDefinition
                                Width="*" />
                        <ColumnDefinition
                                Width="50" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                            Grid.Column="0"
                            Text="X-Real-IP" />
                    <TextBox
                            Grid.Column="1"
                            x:Name="TextBoxXREALIP" />
                    <Button
                            Grid.Column="2"
                            x:Name="ButtonXREALIPSave"
                            Content="选择"
                            Click="ButtonXREALIPSave_OnClick" />
                </Grid>
                <Grid
                        MaxWidth="1000">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                                Width="100" />
                        <ColumnDefinition
                                Width="*" />
                        <ColumnDefinition
                                Width="50" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                            Grid.Column="0"
                            Text="代理服务器" />
                    <TextBox
                            Grid.Column="1"
                            x:Name="TextBoxPROXY" />
                    <Button
                            Grid.Column="2"
                            x:Name="ButtonPROXYSave"
                            Content="选择"
                            Click="ButtonPROXYSave_OnClick" />
                </Grid>
                <CheckBox
                        x:Name="LazySongUrlGetCheck"
                        Content="是否在播放时才获取播放链接"
                        Checked="LazySongUrlGetCheck_Checked"
                        Unchecked="LazySongUrlGetCheck_Unchecked" />
                <CheckBox
                        x:Name="ControlSoundCheck"
                        Content="是否开启 UI 音效"
                        Checked="ControlSoundChecked"
                        Unchecked="ControlSoundUnChecked" />
            </StackPanel>
        </PivotItem>
