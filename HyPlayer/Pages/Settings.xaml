                            <TextBox x:Name="TextBoxXREALIP" Grid.Column="1" />
                            <Button
                                x:Name="ButtonXREALIPSave"
                                Grid.Column="2"
                                Click="ButtonXREALIPSave_OnClick"
                                Content="设置"
                                Style="{StaticResource ButtonRevealStyle}" />
                        </Grid>
                        <Grid MaxWidth="1000">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="50" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="代理服务器 (置空不设置)" />
                            <TextBox x:Name="TextBoxPROXY" Grid.Column="1" />
                            <Button
                                x:Name="ButtonPROXYSave"
                                Grid.Column="2"
                                Click="ButtonPROXYSave_OnClick"
                                Content="设置"
                                Style="{StaticResource ButtonRevealStyle}" />
                        </Grid>
                        <!--<CheckBox
                        x:Name="LazySongUrlGetCheck"
                        Content="是否在播放时才获取播放链接"
                        IsChecked="{x:Bind hyplayer:Common.Setting.songUrlLazyGet, Mode=TwoWay}" />-->
                        <CheckBox
                            x:Name="XboxPointerSet"
                            Content="Xbox上是否隐藏指针（不要开启!）"
                            IsChecked="{x:Bind hyplayer:Common.Setting.xboxHidePointer, Mode=TwoWay}" />
                        <CheckBox
                            x:Name="ForceMemoryCollect"
                            Content="是否频繁内存回收 (开启后可能会频繁出现页面重载现象)"
                            IsChecked="{x:Bind hyplayer:Common.Setting.forceMemoryGarbage, Mode=TwoWay}" />
                        <CheckBox Content="使用 亚克力背景 (否则为一般模糊)"
                                  IsChecked="{x:Bind hyplayer:Common.Setting.useAcrylic, Mode=TwoWay}" />
                        <CheckBox Content="无图模式 (开启后需重启应用)"
                                  IsChecked="{x:Bind hyplayer:Common.Setting.noImage, Mode=TwoWay}" />
                        <CheckBox Content="PlayBar 脱离窗口边缘"
                                  IsChecked="{x:Bind hyplayer:Common.Setting.playBarMargin, Mode=TwoWay}" />
                        <CheckBox Content="是否开启高级音乐历史存储 (超过 100 首)"
                                  IsChecked="{x:Bind hyplayer:Common.Setting.advancedMusicHistoryStorage, Mode=TwoWay}" />
                        <CheckBox Content="是否使用不重复随机"
                                  IsChecked="{x:Bind hyplayer:Common.Setting.shuffleNoRepeating, Mode=TwoWay}" />
                        <CheckBox Content="是否显示随机列表"
                                  Visibility="{x:Bind hyplayer:Common.Setting.shuffleNoRepeating, Mode=OneWay}"
                                  IsChecked="{x:Bind hyplayer:Common.Setting.displayShuffledList, Mode=TwoWay}" />
                        <CheckBox
                            x:Name="CBSongCacheEnable"
                            Content="是否开启播放缓存 (可能造成播放前空白)"
                            IsChecked="{x:Bind hyplayer:Common.Setting.enableCache, Mode=TwoWay}" />
                        <CheckBox
                            x:Name="ControlSoundCheck"
                            Checked="ControlSoundChecked"
                            Content="是否开启 UI 音效"
                            IsChecked="{x:Bind hyplayer:Common.Setting.uiSound, Mode=TwoWay}"
                            Unchecked="ControlSoundUnChecked" />
                        <CheckBox
                            x:Name="CBOldSMTC"
                            Content="是否同时开启传统SMTC控制 (可能会减小后台闪退几率,重启后生效)"
                            IsChecked="{x:Bind hyplayer:Common.Setting.ancientSMTC, Mode=TwoWay}" />
                        <CheckBox Content="是否启用安全本地文件访问 (可能会提高内存占用)"
                                  IsChecked="{x:Bind hyplayer:Common.Setting.safeFileAccess, Mode=TwoWay}" />
                        <CheckBox Content="是否进行听歌打卡 (将会把听歌数据上传网易云音乐同步)"
                                  IsChecked="{x:Bind hyplayer:Common.Setting.doScrobble, Mode=TwoWay}" />
                        <CheckBox Content="歌词界面专辑封面不裁剪为正方形"
                                  IsChecked="{x:Bind hyplayer:Common.Setting.expandedPlayerFullCover, Mode=TwoWay}" />
                        <CheckBox Content="SMTC 更新进度条"
                                  IsChecked="{x:Bind hyplayer:Common.Setting.progressInSMTC, Mode=TwoWay}" />
                        <CheckBox
                            x:Name="HighQualityCoverInSMTC"
                            Content="是否输出高清图片到SMTC"
                            IsChecked="{x:Bind hyplayer:Common.Setting.highQualityCoverInSMTC, Mode=TwoWay}" />
                        <controls:RadioButtons
                            x:Name="RadioButtonsTheme"
                            FontSize="20"
                            Header="颜色模式: (修改将在重启 HyPlayer 后生效)"
                            MaxColumns="3"
                            SelectedIndex="{x:Bind hyplayer:Common.Setting.themeRequest, Mode=TwoWay}"
                            SelectionChanged="RadioButtonsTheme_SelectionChanged">
                            <RadioButton Content="跟随系统" />
                            <RadioButton Content="亮色" />
                            <RadioButton Content="暗色" />
                        </controls:RadioButtons>
                        <Button
                            x:Name="RestartBtn"
                            VerticalAlignment="Center"
                            Click="RestartBtn_Click"
                            Content="立即重启"
                            Style="{StaticResource ButtonRevealStyle}"
                            Visibility="Collapsed" />
                        <Button
                            x:Name="BtnXboxReserve"
                            Click="BtnXboxReserve_Click"
                            Content="Xbox 进后台模式"
                            Style="{StaticResource ButtonRevealStyle}" />
                        <CheckBox Content="完整模式 (显示发现及评论入口)"
                                  IsChecked="{x:Bind hyplayer:Common.Setting.notClearMode, Mode=TwoWay}" />
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>
