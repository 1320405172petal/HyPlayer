                    </StackPanel>
                    <StackPanel
                        Margin="10,20,0,0"
                        Orientation="Horizontal"
                        Tapped="UIElement_OnTapped">
                        <PersonPicture ProfilePicture="https://thirdqq.qlogo.cn/g?b=sdk&amp;k=eHh3SVVDUJKHf1I5XD7CPg&amp;s=100" />
