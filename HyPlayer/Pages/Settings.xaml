<Page
    x:Class="HyPlayer.Pages.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:controls1="using:HyPlayer.Controls"
    xmlns:hyplayer="using:HyPlayer"
    NavigationCacheMode="Disabled">

    <Grid Margin="0,0,0,150">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Margin="30,0,30,0"
            FontSize="25"
            Text="设置" />
        <Pivot
            Grid.Row="1"
            Margin="15,10,0,0"
            FontFamily="Black">
            <PivotItem FontFamily="Thick" Header="歌词设置">
                <ScrollViewer VerticalScrollMode="Enabled">
                    <StackPanel x:Name="StackPanelLyricSet" Orientation="Vertical">
                        <TextBlock FontSize="20" Text="罗马音设置" />
                        <TextBlock
                            x:Name="RomajiStatus"
                            Margin="0,10,0,0"
                            Text="获取中" />
                        <Button
                            Margin="0,10,0,0"
                            Click="ButtonBase_OnClick"
                            Content="获取罗马音资源文件"
                            Style="{StaticResource ButtonRevealStyle}" />
                        <TextBlock
                            Margin="0,20,0,0"
                            FontSize="20"
                            Text="歌词大小设置" />
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock VerticalAlignment="Center" Text="歌词大小 (负数为自动)" />
                            <controls:NumberBox
                                x:Name="LyricSize"
                                Grid.Column="1"
                                Width="100"
                                Margin="0,10,0,0"
                                LargeChange="5"
                                SmallChange="1"
                                SpinButtonPlacementMode="Compact"
                                ValueChanged="LyricSize_OnValueChanged"
                                Value="{x:Bind hyplayer:Common.Setting.lyricSize}" />
                        </Grid>

                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock VerticalAlignment="Center" Text="罗马音大小 (默认为 15)" />
                            <controls:NumberBox
                                x:Name="RomajiSize"
                                Grid.Column="1"
                                Width="100"
                                Margin="0,10,0,0"
                                LargeChange="5"
                                SmallChange="1"
                                SpinButtonPlacementMode="Compact"
                                Value="{x:Bind hyplayer:Common.Setting.romajiSize, Mode=TwoWay}" />
                        </Grid>

                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock VerticalAlignment="Center" Text="当前歌词放大大小" />
                            <controls:NumberBox
                                x:Name="LyricScaleSize"
                                Grid.Column="1"
                                Width="100"
                                Margin="0,10,0,0"
                                LargeChange="5"
                                SmallChange="1"
                                SpinButtonPlacementMode="Compact"
                                Value="{x:Bind hyplayer:Common.Setting.lyricScaleSize, Mode=TwoWay}" />
                        </Grid>

                        <CheckBox
                            x:Name="CheckBoxAlignment"
                            Content="是否左对齐"
                            IsChecked="{x:Bind hyplayer:Common.Setting.lyricAlignment, Mode=TwoWay}" />
                        <!--<CheckBox
                        x:Name="CheckBoxLyricShadow"
                        Content="是否产生阴影"
                        IsChecked="{x:Bind hyplayer:Common.Setting.lyricDropshadow, Mode=TwoWay}" />-->
                        <controls:RadioButtons
                            Margin="0,20,0,0"
                            FontSize="20"
                            Header="歌词颜色"
                            MaxColumns="4"
                            SelectedIndex="{x:Bind hyplayer:Common.Setting.lyricColor, Mode=TwoWay}">
                            <RadioButton Content="自动" />
                            <RadioButton Content="白色" />
                            <RadioButton Content="黑色" />
                        </controls:RadioButtons>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>
            <PivotItem FontFamily="Thick" Header="播放设置">
                <ScrollViewer VerticalScrollMode="Enabled">
                    <StackPanel Orientation="Vertical">
                        <controls:RadioButtons
                            x:Name="RadioButtonsSongBr"
                            FontSize="20"
                            Header="在线播放音质:"
                            MaxColumns="4">
                            <RadioButton
                                Checked="RadioButton_Checked"
                                Content="标准 (128k)"
                                Tag="128000" />
                            <RadioButton
                                Checked="RadioButton_Checked"
                                Content="较高 (192k)"
                                Tag="192000" />
                            <RadioButton
                                Checked="RadioButton_Checked"
                                Content="极高 (320k)"
                                Tag="320000" />
                            <RadioButton
                                Checked="RadioButton_Checked"
                                Content="无损 (VIP)"
                                Tag="999000" />
                        </controls:RadioButtons>
                        <controls:RadioButtons
                            x:Name="RadioButtonsSongDownloadBr"
                            Margin="0,20,0,0"
                            FontSize="20"
                            Header="歌曲下载音质:"
                            MaxColumns="4">
                            <RadioButton
                                Checked="RadioButton1_Checked"
                                Content="标准 (128k)"
                                Tag="128000" />
                            <RadioButton
                                Checked="RadioButton1_Checked"
                                Content="较高 (192k)"
                                Tag="192000" />
                            <RadioButton
                                Checked="RadioButton1_Checked"
                                Content="极高 (320k)"
                                Tag="320000" />
                            <RadioButton
                                Checked="RadioButton1_Checked"
                                Content="无损 (VIP)"
                                Tag="999000" />
                        </controls:RadioButtons>
                        <ToggleSwitch
                            x:Name="FadeInOut"
                            Header="切歌渐入渐出："
                            IsOn="{x:Bind hyplayer:Common.Setting.fadeInOut, Mode=TwoWay}" />
                        <Slider
                            x:Name="FadeTime"
                            Width="300"
                            HorizontalAlignment="Left"
                            Header="切歌渐入渐出时间 单位: s"
                            Maximum="6"
                            Minimum="0"
                            ToolTipService.ToolTip="{x:Bind FadeTime.Value}"
                            Visibility="{x:Bind hyplayer:Common.Setting.fadeInOut, Mode=OneWay}"
                            Value="{x:Bind hyplayer:Common.Setting.fadeInOutTime, Mode=TwoWay}" />
                        <ToggleSwitch Header="播放暂停渐入渐出"
                                      IsOn="{x:Bind hyplayer:Common.Setting.fadeInOutPause, Mode=TwoWay}" />
                        <Slider
                            x:Name="FadeTimePause"
                            Width="300"
                            HorizontalAlignment="Left"
                            Header="渐入渐出时间 单位: 0.1s"
                            Maximum="10"
                            Minimum="0"
                            ToolTipService.ToolTip="{x:Bind FadeTimePause.Value}"
                            Visibility="{x:Bind hyplayer:Common.Setting.fadeInOutPause, Mode=OneWay}"
                            Value="{x:Bind hyplayer:Common.Setting.fadeInOutTimePause, Mode=TwoWay}" />
                        <Border Height="15" />
                        <CheckBox Content="圆形唱片" IsChecked="{x:Bind hyplayer:Common.Setting.albumRound, Mode=TwoWay}" />
                        <CheckBox Content="唱片旋转" IsChecked="{x:Bind hyplayer:Common.Setting.albumRotate, Mode=TwoWay}" />
                        <Slider
                            x:Name="SliderAlbumBorderLength"
                            Width="300"
                            HorizontalAlignment="Left"
                            Header="唱片边框厚度 (0 为无边框)"
                            Maximum="280"
                            Minimum="0"
                            ToolTipService.ToolTip="{x:Bind SliderAlbumBorderLength.Value}"
                            Value="{x:Bind hyplayer:Common.Setting.albumBorderLength, Mode=TwoWay}" />
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock VerticalAlignment="Center" Text="歌词页面封面阴影强度 (0为无阴影)" />
                            <controls:NumberBox
                                x:Name="NBShadowDepth"
                                Grid.Column="1"
                                Width="100"
                                LargeChange="5"
                                SmallChange="1"
                                SpinButtonPlacementMode="Compact"
                                ValueChanged="NBShadowDepth_OnValueChanged"
                                Value="{x:Bind hyplayer:Common.Setting.expandedCoverShadowDepth}" />
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>
            <PivotItem FontFamily="Thick" Header="存储设置">
                <ScrollViewer VerticalScrollMode="Enabled">
                    <StackPanel Orientation="Vertical">
                        <Grid MaxWidth="1000">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="50" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="下载路径" />
                            <TextBlock
                                x:Name="TextBoxDownloadDir"
                                Grid.Column="1"
                                Text="{x:Bind hyplayer:Common.Setting.downloadDir, Mode=TwoWay}" />
                            <Button
                                x:Name="ButtonDownloadSelect"
                                Grid.Column="2"
                                Click="ButtonDownloadSelect_OnClick"
                                Content="选择"
                                Style="{StaticResource ButtonRevealStyle}" />
                        </Grid>
                        <Grid MaxWidth="1000" Visibility="{x:Bind hyplayer:Common.Setting.enableCache, Mode=OneWay}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="50" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="缓存路径" />
                            <TextBlock
                                x:Name="TextBoxCacheDir"
                                Grid.Column="1"
                                Text="{x:Bind hyplayer:Common.Setting.cacheDir, Mode=TwoWay}" />
                            <Button
                                x:Name="ButtonCacheSelect"
                                Grid.Column="2"
                                Click="ButtonCacheSelect_OnClick"
                                Content="选择"
                                Style="{StaticResource ButtonRevealStyle}" />
                        </Grid>
                        <Grid MaxWidth="1000">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="50" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="搜索路径" />
                            <TextBlock
                                x:Name="TextBoxSearchingDir"
                                Grid.Column="1"
                                Text="{x:Bind hyplayer:Common.Setting.searchingDir, Mode=TwoWay}" />
                            <Button
                                x:Name="ButtonSearchingSelect"
                                Grid.Column="2"
                                Click="ButtonSearchingSelect_OnClick"
                                Content="选择"
                                Style="{StaticResource ButtonRevealStyle}" />
                        </Grid>
                        <Grid MaxWidth="1000">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="50" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="下载文件命名" />
                            <TextBox Grid.Column="1"
                                     Text="{x:Bind hyplayer:Common.Setting.downloadFileName, Mode=TwoWay}" />
                            <Button Grid.Column="2">
                                <Button.Flyout>
                                    <Flyout>
                                        <RichTextBlock>
                                            <Paragraph>
                                                &#x27A4;<Bold>{$SINGER}</Bold>
                                                : 歌手<LineBreak />
                                                &#x27A4;<Bold>{$ALBUM}</Bold>
                                                : 专辑<LineBreak />
                                                &#x27A4;<Bold>{$SONGNAME}</Bold>
                                                : 歌曲名<LineBreak />
                                                &#x27A4;<Bold>{$INDEX}</Bold>
                                                : 序号<LineBreak />
                                            </Paragraph>
                                        </RichTextBlock>
                                    </Flyout>
                                </Button.Flyout>
                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE897;" />
                            </Button>
                        </Grid>
                        <CheckBox Content="是否下载歌词"
                                  IsChecked="{x:Bind hyplayer:Common.Setting.downloadLyric, Mode=TwoWay}" />
                        <CheckBox Content="是否下载翻译"
                                  IsChecked="{x:Bind hyplayer:Common.Setting.downloadTranslation, Mode=TwoWay}" />
                        <CheckBox Content="是否写音乐信息"
                                  IsChecked="{x:Bind hyplayer:Common.Setting.writedownloadFileInfo, Mode=TwoWay}" />
                        <CheckBox Content="是否写网易云音乐信息"
                                  IsChecked="{x:Bind hyplayer:Common.Setting.write163Info, Mode=TwoWay}" />
                        <CheckBox Content="是否使用 GBK 写内容"
                                  IsChecked="{x:Bind hyplayer:Common.Setting.usingGBK, Mode=TwoWay}" />
                        <Button
                            x:Name="ClearHistory"
                            Click="ClearHistory_Click"
                            Content="清除历史记录"
                            Style="{StaticResource ButtonRevealStyle}" />
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>
            <PivotItem FontFamily="Thick" Header="实验室🧪">
