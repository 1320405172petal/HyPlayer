<Page
    x:Class="HyPlayer.Pages.Me"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="RectangleImage.Visibility" Value="Collapsed" />
                        <Setter Target="StackPanelUserInfo.(Grid.Column)" Value="1" />
                        <Setter Target="StackPanelUserInfo.(Grid.ColumnSpan)" Value="10" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1024" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="RectangleImage.Visibility" Value="Visible" />
                        <Setter Target="StackPanelUserInfo.(Grid.Column)" Value="5" />
                        <Setter Target="StackPanelUserInfo.(Grid.ColumnSpan)" Value="6" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ScrollViewer.Content>
                <StackPanel Orientation="Vertical">
                    <controls:DockPanel
                        x:Name="GridPersonalInformation"
                        Margin="35,0,0,0"
                        LastChildFill="True">
                        <Rectangle
                            x:Name="RectangleImage"
                            Width="200"
                            Height="200"
                            Margin="15"
                            controls:DockPanel.Dock="Left"
                            RadiusX="10"
                            RadiusY="10">
                            <Rectangle.Fill>
                                <ImageBrush x:Name="ImageRect" Stretch="UniformToFill">
                                    <ImageBrush.ImageSource>
                                        <BitmapImage UriSource="/Assets/icon.png" />
                                    </ImageBrush.ImageSource>
                                </ImageBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <StackPanel Name="StackPanelUserInfo" Orientation="Vertical">
                            <TextBlock
                                Name="TextBoxUserName"
                                FontSize="40"
                                FontWeight="Medium"
                                Text="用户名" />
                            <TextBlock
                                Name="TextBoxSignature"
                                FontSize="18"
                                Text="签名" />
                            <Button
                                x:Name="ButtonLogout"
                                Margin="0,10,0,0"
                                Click="Logout_OnClick"
                                Content="退出登录"
                                Style="{StaticResource ButtonRevealStyle}" />
                        </StackPanel>
                    </controls:DockPanel>
                    <TextBlock
                        Margin="50,30,0,0"
                        FontSize="25"
                        FontWeight="Medium"
                        Text="歌单" />
                    <TextBlock
                        Margin="50,30,0,0"
                        FontSize="18"
                        Text="我的歌单" />
                    <controls:WrapPanel
                        x:Name="GridContainerMy"
                        Margin="0,0,0,50"
                        HorizontalAlignment="Center"
                        HorizontalSpacing="15"
                        VerticalSpacing="15" />
                    <TextBlock
                        Margin="50,30,0,0"
                        FontSize="18"
                        Text="收藏歌单" />
                    <controls:WrapPanel
                        x:Name="GridContainerSub"
                        Margin="0,0,0,350"
                        HorizontalAlignment="Center"
                        HorizontalSpacing="15"
                        VerticalSpacing="15" />
                </StackPanel>

            </ScrollViewer.Content>

        </ScrollViewer>
    </Grid>
</Page>