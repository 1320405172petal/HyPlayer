<Page
	x:Class="HyPlayer.Pages.SongListDetail"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:HyPlayer.Pages"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
	mc:Ignorable="d">

    <ScrollViewer
		VerticalScrollBarVisibility="Auto">
        <ScrollViewer.Content>
            <StackPanel
				Orientation="Vertical">
                <Grid
					Name="GridPersonalInformation">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="146*" />
                        <ColumnDefinition Width="146*" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="215*" />
                        <ColumnDefinition Width="146*" />
                        <ColumnDefinition Width="146*" />
                        <ColumnDefinition Width="146*" />
                        <ColumnDefinition Width="146*" />
                        <ColumnDefinition Width="146*" />
                        <ColumnDefinition Width="146*" />
                    </Grid.ColumnDefinitions>
                    <Image
						Name="ImagePL"
						Grid.Column="1"
						Grid.ColumnSpan="3"
						Source="/Assets/icon.png"></Image>
                    <StackPanel
						Grid.Column="5"
						Grid.ColumnSpan="7"
						Orientation="Vertical" Margin="0,0,144,0">
                        <TextBlock
							Margin="0,0,0,0"
							Name="TextBoxPLName"
							TextWrapping="Wrap"
							Text="歌单名"
							FontSize="36"></TextBlock>
                        <TextBlock
							Margin="0,2,0,0"
							Name="TextBoxAuthor"
							Text="歌单创建者"
							FontSize="18"
							Foreground="Gray"></TextBlock>
                        <Button
                            Margin="0,10,0,0"
                            Content="播放全部"
                            Click="ButtonBase_OnClick" />
                        <TextBlock
							Margin="0,5,0,0"
							x:Name="TextBlockDesc"
							Text="歌单简介"
							FontSize="13"
							Foreground="Gray" />
                    </StackPanel>
                </Grid>
                <StackPanel
                    Margin="20,30,0,0"
                    Spacing="10"
					Name="SongContainer"
					Orientation="Vertical" />

            </StackPanel>

        </ScrollViewer.Content>

    </ScrollViewer>
</Page>
