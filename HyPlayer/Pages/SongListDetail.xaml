<Page
    x:Class="HyPlayer.Pages.SongListDetail"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:classes="using:HyPlayer.Classes"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:controls1="using:HyPlayer.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hyplayer="using:HyPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="using:HyPlayer.Pages"
    d:DataContext="{d:DesignInstance Type=pages:SongListDetail}"
    NavigationCacheMode="Disabled"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition />
            <RowDefinition Height="175" />
        </Grid.RowDefinitions>
        <controls:DockPanel
            x:Name="GridPersonalInformation"
            Grid.Row="0"
            LastChildFill="True">
            <Rectangle
                x:Name="RectangleImage"
                Width="200"
                Height="200"
                Margin="15,0,15,0"
                controls:DockPanel.Dock="Left"
                RadiusX="10"
                RadiusY="10">
                <Rectangle.Fill>
                    <ImageBrush x:Name="ImageRect" Stretch="UniformToFill">
                        <ImageBrush.ImageSource>
                            <BitmapImage UriSource="/Assets/icon.png" />
                        </ImageBrush.ImageSource>
                    </ImageBrush>
                </Rectangle.Fill>
            </Rectangle>
            <StackPanel
                Name="StackPanelUserInfo"
                Margin="15,15,0,0"
                Orientation="Vertical">
                <TextBlock
                    Name="TextBoxPLName"
                    Margin="0,0,0,0"
                    FontSize="36"
                    FontWeight="Medium"
                    Text="歌单名"
                    TextWrapping="Wrap" />
                <TextBlock
                    Name="TextBoxAuthor"
                    Margin="0,2,0,0"
                    FontSize="18"
                    Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"
                    Tapped="TextBoxAuthor_Tapped"
                    Text="歌单创建者" />
                <StackPanel
                    Margin="0,10,0,0"
                    Orientation="Horizontal"
                    Spacing="15">
                    <Button
                        Click="ButtonPlayAll_OnClick"
                        Content="播放全部"
                        Style="{StaticResource ButtonRevealStyle}" />
                    <ToggleButton
                        x:Name="ToggleButtonLike"
                        Click="LikeBtnClick"
                        Content="收藏"
                        Style="{StaticResource ToggleButtonRevealStyle}" />
                    <Button
                        Click="ButtonDownloadAll_OnClick"
                        Content="下载全部"
                        Style="{StaticResource ButtonRevealStyle}" />
                    <Button
                        Click="ButtonComment_OnClick"
                        Content="评论"
                        Style="{StaticResource ButtonRevealStyle}"
                        Visibility="{x:Bind hyplayer:Common.Setting.notClearMode, Mode=OneWay}" />
                    <Button
                        x:Name="ButtonIntel"
                        Click="ButtonHeartBeat_OnClick"
                        Content="心动模式"
                        Style="{StaticResource ButtonRevealStyle}"
                        Visibility="Collapsed" />
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <TextBlock
                        x:Name="TextBlockDesc"
                        MaxWidth="300"
                        Margin="0,5,0,0"
                        HorizontalAlignment="Left"
                        FontSize="13"
                        Foreground="{ThemeResource SystemControlForegroundChromeHighBrush}"
                        MaxLines="7"
                        Text="歌单简介"
                        TextWrapping="WrapWholeWords">
                        <FlyoutBase.AttachedFlyout>
                            <Flyout>
                                <StackPanel Orientation="Vertical">
                                    <TextBox
                                        x:Name="NewDesc"
                                        MaxWidth="400"
                                        x:DefaultBindMode="OneWay"
                                        AcceptsReturn="True"
                                        Text="{x:Bind TextBlockDesc.Text}"
                                        TextWrapping="Wrap" />
                                    <Button
                                        x:Name="Confirm"
                                        Click="Confirm_Click"
                                        Content="确认"
                                        Style="{StaticResource ButtonRevealStyle}" />
                                </StackPanel>
                            </Flyout>
                        </FlyoutBase.AttachedFlyout>
                    </TextBlock>
                    <HyperlinkButton
                        x:Name="Edit"
                        Click="Edit_Click"
                        Content="编辑简介"
                        Visibility="Collapsed" />
                </StackPanel>
            </StackPanel>
        </controls:DockPanel>
        <controls1:SongsList
            x:Name="SongsList"
            Grid.Row="1"
            Grid.RowSpan="2"
            Margin="20,20,0,150"
            VerticalAlignment="Stretch"
            Songs="{x:Bind Songs}" />

        <Button
            x:Name="NextPage"
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Click="NextPage_OnClickPage_OnClick"
            Content="加载更多"
            Style="{StaticResource ButtonRevealStyle}"
            Visibility="Visible" />
    </Grid>


    <VisualStateManager.VisualStateGroups>
        <VisualStateGroup>
            <VisualState>
                <VisualState.StateTriggers>
                    <AdaptiveTrigger MinWindowWidth="0" />
                </VisualState.StateTriggers>
                <VisualState.Setters>
                    <Setter Target="RectangleImage.Visibility" Value="Collapsed" />
                    <Setter Target="StackPanelUserInfo.(Grid.Column)" Value="1" />
                    <Setter Target="StackPanelUserInfo.(Grid.ColumnSpan)" Value="10" />
                </VisualState.Setters>
            </VisualState>
            <VisualState>
                <VisualState.StateTriggers>
                    <AdaptiveTrigger MinWindowWidth="1024" />
                </VisualState.StateTriggers>
                <VisualState.Setters>
                    <Setter Target="RectangleImage.Visibility" Value="Visible" />
                    <Setter Target="StackPanelUserInfo.(Grid.Column)" Value="5" />
                    <Setter Target="StackPanelUserInfo.(Grid.ColumnSpan)" Value="6" />
                </VisualState.Setters>
            </VisualState>
        </VisualStateGroup>
    </VisualStateManager.VisualStateGroups>
</Page>