<Page
    x:Class="HyPlayer.Pages.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel x:Name="MainContainer" Padding="15" Spacing="10" Orientation="Vertical">
            <!-- 欢迎语 -->
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="35" Text="Hi~ " />
                    <TextBlock FontSize="35" x:Name="TbHelloUserName" />
                </StackPanel>
                <TextBlock FontSize="15" x:Name="TbRamdomWelcome" Text="用音乐开启新的一天吧" />
            </StackPanel>
            <StackPanel x:Name="LoginedContent" Visibility="Collapsed">
                <!-- 每日推荐 -->
                <!-- 不加载日推
                <StackPanel Orientation="Vertical" CornerRadius="8"
                        Background="{ThemeResource SystemControlBackgroundListLowBrush}">
                    <TextBlock Margin="5" FontSize="30" Text="每日推荐" FontFamily="Black" />
                    <ScrollViewer
                    VerticalScrollBarVisibility="Disabled"
                    VerticalScrollMode="Disabled"
                    HorizontalScrollBarVisibility="Auto"
                    HorizontalScrollMode="Auto">
                        <StackPanel x:Name="DailySongContainer" Orientation="Horizontal" Height="240" />
                    </ScrollViewer>
                </StackPanel>
                -->
                <!-- 功能按钮 -->
                <Grid Height="100" Background="{ThemeResource SystemControlBackgroundListLowBrush}" CornerRadius="8">
                    <Grid Padding="1" ColumnSpacing="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition MinWidth="230" />
                            <ColumnDefinition MinWidth="230" />
                        </Grid.ColumnDefinitions>
                        <Button HorizontalAlignment="Center" Click="Button_Click_1" Grid.Column="0" CornerRadius="8"
                            Padding="15">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <FontIcon FontSize="45" FontFamily="{StaticResource SymbolThemeFontFamily}"
                                      Glyph="&#xE93E;" />
                                <TextBlock VerticalAlignment="Center" FontSize="35" Text="私人 FM" />
                            </StackPanel>
                        </Button>
                        <Button HorizontalAlignment="Center" Click="Button_Click_2" Grid.Column="1" CornerRadius="8"
                            Padding="15">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <FontIcon FontSize="45" FontFamily="{StaticResource SymbolThemeFontFamily}"
                                      Glyph="&#xE95E;" />
                                <TextBlock VerticalAlignment="Center" FontSize="35" Text="心动模式" />
                            </StackPanel>
                        </Button>
                    </Grid>
                </Grid>

                    <!-- 推荐歌单 -->
                    <StackPanel x:Name="FirstGrid" Grid.Column="0" Grid.Row="0" Orientation="Vertical"
                            Background="{ThemeResource SystemControlBackgroundListLowBrush}" CornerRadius="8">
                        <TextBlock Margin="5" FontSize="30" Text="推荐歌单" FontFamily="Black" />
                        <ScrollViewer HorizontalScrollMode="Auto" VerticalScrollBarVisibility="Disabled"
                                  VerticalScrollMode="Disabled" HorizontalScrollBarVisibility="Auto" Height="250">
                            <StackPanel x:Name="RecommendSongListContainer" Orientation="Horizontal" Spacing="15" />
                        </ScrollViewer>
                    </StackPanel>

                    <!-- 榜单 -->
                <StackPanel Orientation="Vertical" Background="{ThemeResource SystemControlBackgroundListLowBrush}"
                        CornerRadius="8">
                    <TextBlock Margin="5" FontSize="30" Text="榜单" />
                    <ScrollViewer HorizontalScrollMode="Auto" VerticalScrollBarVisibility="Disabled"
                              VerticalScrollMode="Disabled" HorizontalScrollBarVisibility="Auto" Height="250">
                        <StackPanel x:Name="RankPlayList" Orientation="Horizontal" Spacing="15" />
                    </ScrollViewer>
                </StackPanel>
            </StackPanel>

            <StackPanel x:Name="UnLoginedContent" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock HorizontalAlignment="Center" FontSize="35" Text="请先点击侧边栏登录以获得更多个性化推荐功能"/>
                <TextBlock
                Padding="15,0,0,0"
                FontSize="40"
                Text="排行榜" 
                FontFamily="Microsoft YaHei UI" />
                <ScrollViewer
                HorizontalScrollBarVisibility="Auto"
                HorizontalScrollMode="Enabled"
                VerticalScrollMode="Disabled">
                    <StackPanel
                    x:Name="RankList"
                    Padding="0,0,0,15"
                    Orientation="Horizontal"
                    Spacing="15" />
                </ScrollViewer>
            </StackPanel>

            <!-- 请在上方编辑代码 -->
            <!-- 占位 -->
            <Grid Height="150" />
        </StackPanel>
    </ScrollViewer>
</Page>