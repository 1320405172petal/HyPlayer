<Page
    x:Class="HyPlayer.Pages.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    NavigationCacheMode="Disabled"
    mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel
            x:Name="MainContainer"
            Padding="15"
            Orientation="Vertical"
            Spacing="10">
            <!--  欢迎语  -->
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="35" Text="Hi~ " />
                    <TextBlock x:Name="TbHelloUserName" FontSize="35" />
                </StackPanel>
                <TextBlock
                    x:Name="TbRamdomWelcome"
                    FontSize="15"
                    Text="用音乐开启新的一天吧" />
            </StackPanel>
            <StackPanel
                x:Name="LoginedContent"
                Spacing="12"
                Visibility="Collapsed">
                <!--  每日推荐  -->
                <!-- 不加载日推
                <StackPanel Orientation="Vertical" CornerRadius="8"
                        Background="{ThemeResource SystemControlBackgroundListLowBrush}">
                    <TextBlock Margin="5" FontSize="30" Text="每日推荐" FontFamily="Black" />
                    <ScrollViewer
                    VerticalScrollBarVisibility="Disabled"
                    VerticalScrollMode="Disabled"
                    HorizontalScrollBarVisibility="Auto"
                    HorizontalScrollMode="Auto">
                        <StackPanel x:Name="DailySongContainer" Orientation="Horizontal" Height="240" />
                    </ScrollViewer>
                </StackPanel>
                -->
                <!--  功能按钮  -->

                <!--  推荐歌单  -->
                <StackPanel
                    x:Name="FirstGrid"
                    Background="{ThemeResource SystemControlBackgroundListLowBrush}"
                    CornerRadius="8"
                    Orientation="Vertical">
                    <TextBlock
                        Margin="5"
                        FontFamily="Black"
                        FontSize="20"
                        Text="推荐歌单" />
                    <ScrollViewer
                        Height="250"
                        HorizontalScrollBarVisibility="Auto"
                        HorizontalScrollMode="Auto"
                        VerticalScrollBarVisibility="Disabled"
                        VerticalScrollMode="Disabled">
                        <StackPanel
                            x:Name="RecommendSongListContainer"
                            Orientation="Horizontal"
                            Spacing="15" />
                    </ScrollViewer>
                </StackPanel>

                <!--  榜单  -->
                <StackPanel
                    Background="{ThemeResource SystemControlBackgroundListLowBrush}"
                    CornerRadius="8"
                    Orientation="Vertical">
                    <TextBlock
                        Margin="5"
                        FontSize="20"
                        Text="榜单" />
                    <ScrollViewer
                        Height="250"
                        HorizontalScrollBarVisibility="Auto"
                        HorizontalScrollMode="Auto"
                        VerticalScrollBarVisibility="Disabled"
                        VerticalScrollMode="Disabled">
                        <StackPanel
                            x:Name="RankPlayList"
                            Orientation="Horizontal"
                            Spacing="15" />
                    </ScrollViewer>
                </StackPanel>
            </StackPanel>

            <StackPanel
                x:Name="UnLoginedContent"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="35"
                    Text="请先点击侧边栏登录以获得更多个性化推荐功能" />
                <TextBlock
                    Padding="15,0,0,0"
                    FontFamily="Microsoft YaHei UI"
                    FontSize="13"
                    Text="排行榜" />
                <ScrollViewer
                    HorizontalScrollBarVisibility="Auto"
                    HorizontalScrollMode="Enabled"
                    VerticalScrollMode="Disabled">
                    <StackPanel
                        x:Name="RankList"
                        Padding="0,0,0,15"
                        Orientation="Horizontal"
                        Spacing="15" />
                </ScrollViewer>
            </StackPanel>

            <!--  请在上方编辑代码  -->
            <!--  占位  -->
            <Grid Height="150" />
        </StackPanel>
    </ScrollViewer>
</Page>