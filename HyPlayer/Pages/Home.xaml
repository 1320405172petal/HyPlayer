<Page
    mc:Ignorable="d"
    x:Class="HyPlayer.Pages.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel
            Orientation="Vertical"
            Padding="15"
            Spacing="10"
            x:Name="MainContainer">
            <!--  欢迎语  -->
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="35" Text="Hi~ " />
                    <TextBlock FontSize="35" x:Name="TbHelloUserName" />
                </StackPanel>
                <TextBlock
                    FontSize="15"
                    Text="用音乐开启新的一天吧"
                    x:Name="TbRamdomWelcome" />
            </StackPanel>
            <StackPanel
                Spacing="12"
                Visibility="Collapsed"
                x:Name="LoginedContent">
                <!--  每日推荐  -->
                <!-- 不加载日推
                <StackPanel Orientation="Vertical" CornerRadius="8"
                        Background="{ThemeResource SystemControlBackgroundListLowBrush}">
                    <TextBlock Margin="5" FontSize="30" Text="每日推荐" FontFamily="Black" />
                    <ScrollViewer
                    VerticalScrollBarVisibility="Disabled"
                    VerticalScrollMode="Disabled"
                    HorizontalScrollBarVisibility="Auto"
                    HorizontalScrollMode="Auto">
                        <StackPanel x:Name="DailySongContainer" Orientation="Horizontal" Height="240" />
                    </ScrollViewer>
                </StackPanel>
                -->
                <!--  功能按钮  -->
                <Grid
                    Background="{ThemeResource SystemControlBackgroundListLowBrush}"
                    CornerRadius="8"
                    Height="100">
                    <Grid ColumnSpacing="15" Padding="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition MinWidth="230" />
                            <ColumnDefinition MinWidth="230" />
                        </Grid.ColumnDefinitions>
                        <Button
                            Click="Button_Click_1"
                            CornerRadius="8"
                            Grid.Column="0"
                            HorizontalAlignment="Center"
                            Padding="15"
                            Style="{StaticResource ButtonRevealStyle}">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <FontIcon
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    FontSize="45"
                                    Glyph="&#xE93E;" />
                                <TextBlock
                                    FontSize="35"
                                    Text="私人 FM"
                                    VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <Button
                            Click="Button_Click_2"
                            CornerRadius="8"
                            Grid.Column="1"
                            HorizontalAlignment="Center"
                            Padding="15"
                            Style="{StaticResource ButtonRevealStyle}">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <FontIcon
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    FontSize="45"
                                    Glyph="&#xE95E;" />
                                <TextBlock
                                    FontSize="35"
                                    Text="心动模式"
                                    VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                    </Grid>
                </Grid>

                <!--  推荐歌单  -->
                <StackPanel
                    Background="{ThemeResource SystemControlBackgroundListLowBrush}"
                    CornerRadius="8"
                    Grid.Column="0"
                    Grid.Row="0"
                    Orientation="Vertical"
                    x:Name="FirstGrid">
                    <TextBlock
                        FontFamily="Black"
                        FontSize="30"
                        Margin="5"
                        Text="推荐歌单" />
                    <ScrollViewer
                        Height="250"
                        HorizontalScrollBarVisibility="Auto"
                        HorizontalScrollMode="Auto"
                        VerticalScrollBarVisibility="Disabled"
                        VerticalScrollMode="Disabled">
                        <StackPanel
                            Orientation="Horizontal"
                            Spacing="15"
                            x:Name="RecommendSongListContainer" />
                    </ScrollViewer>
                </StackPanel>

                <!--  榜单  -->
                <StackPanel
                    Background="{ThemeResource SystemControlBackgroundListLowBrush}"
                    CornerRadius="8"
                    Orientation="Vertical">
                    <TextBlock
                        FontSize="30"
                        Margin="5"
                        Text="榜单" />
                    <ScrollViewer
                        Height="250"
                        HorizontalScrollBarVisibility="Auto"
                        HorizontalScrollMode="Auto"
                        VerticalScrollBarVisibility="Disabled"
                        VerticalScrollMode="Disabled">
                        <StackPanel
                            Orientation="Horizontal"
                            Spacing="15"
                            x:Name="RankPlayList" />
                    </ScrollViewer>
                </StackPanel>
            </StackPanel>

            <StackPanel
                HorizontalAlignment="Center"
                Orientation="Vertical"
                VerticalAlignment="Center"
                x:Name="UnLoginedContent">
                <TextBlock
                    FontSize="35"
                    HorizontalAlignment="Center"
                    Text="请先点击侧边栏登录以获得更多个性化推荐功能" />
                <TextBlock
                    FontFamily="Microsoft YaHei UI"
                    FontSize="40"
                    Padding="15,0,0,0"
                    Text="排行榜" />
                <ScrollViewer
                    HorizontalScrollBarVisibility="Auto"
                    HorizontalScrollMode="Enabled"
                    VerticalScrollMode="Disabled">
                    <StackPanel
                        Orientation="Horizontal"
                        Padding="0,0,0,15"
                        Spacing="15"
                        x:Name="RankList" />
                </ScrollViewer>
            </StackPanel>

            <!--  请在上方编辑代码  -->
            <!--  占位  -->
            <Grid Height="150" />
        </StackPanel>
    </ScrollViewer>
</Page>