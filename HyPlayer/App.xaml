<Application
    x:Class="HyPlayer.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources
                    xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary
                    Source="/Resources/Acrylic.xaml" />
                <ResourceDictionary
                    Source="/Resources/Theme.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="BaseStyle" TargetType="controls:ImageEx">
                <Setter Property="IsCacheEnabled" Value="False" />                
            </Style>
            <Thickness x:Key="NavigationViewHeaderMargin">56,44,0,0</Thickness>
            <Thickness x:Key="NavigationViewContentMargin">0,48,0,0</Thickness>
            <Thickness x:Key="NavigationViewContentGridBorderThickness">1,1,0,0</Thickness>
            <CornerRadius x:Key="NavigationViewContentGridCornerRadius">8,0,0,0</CornerRadius>
        </ResourceDictionary>
    </Application.Resources>
</Application>