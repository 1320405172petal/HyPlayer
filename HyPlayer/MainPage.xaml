<Page
    x:Class="HyPlayer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:media="using:Windows.UI.Xaml.Media"
    xmlns:controls1="using:Microsoft.UI.Xaml.Controls"
    xmlns:controls2="using:HyPlayer.Controls"
    xmlns:hyPlayer="using:HyPlayer"
    xmlns:hyPlayerPage="using:HyPlayer.Pages"
    mc:Ignorable="d">
    <Page.Resources>
        <media:AcrylicBrush
            x:Key="PlaybackAcrylicInAppLuminosity"
            BackgroundSource="Backdrop"
            TintOpacity="0.67500003206078"
            TintLuminosityOpacity="0.183000008692034"
            TintColor="Gray"
            FallbackColor="Gray" />
        <media:AcrylicBrush
            x:Key="AccentAcrylicInAppLuminosity"
            BackgroundSource="Backdrop"
            TintOpacity="0.784000037238002"
            TintLuminosityOpacity="0.653000031015836"
            TintColor="#FF93CDF1"
            FallbackColor="SkyBlue" />
    </Page.Resources>
    <Grid>
        <Frame Name="MainFrame"
            SourcePageType="hyPlayerPage:BasePage"/>
        <Grid
            Name="GridPlayBar"
            Margin="16"
            CornerRadius="4"
            Background="{ThemeResource PlaybackAcrylicInAppLuminosity}"
            VerticalAlignment="Bottom"
            Height="100">
            <controls2:PlayBar/>
        </Grid>
    </Grid>
</Page>