<Page
    x:Class="HyPlayer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls2="using:HyPlayer.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hyPlayerPage="using:HyPlayer.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="300" />
                        <AdaptiveTrigger MinWindowHeight="300" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="GridPlayBar.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>

                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="0" />
                        <AdaptiveTrigger MinWindowHeight="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="GridPlayBar.Visibility" Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Frame
            Name="MainFrame"
            x:FieldModifier="public"
            SourcePageType="hyPlayerPage:BasePage" />
        <Frame
            Name="ExpandedPlayer"
            x:FieldModifier="public"
            CacheSize="0"
            IsNavigationStackEnabled="False"
            SourcePageType="hyPlayerPage:BlankPage"
            Visibility="Collapsed" />
        <Grid
            Name="GridPlayBar"
            Height="100"
            Margin="16"
            VerticalAlignment="Bottom"
            x:FieldModifier="public"
            Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}"
            CornerRadius="4"
            Visibility="Visible">
            <controls2:PlayBar />
        </Grid>
    </Grid>
</Page>