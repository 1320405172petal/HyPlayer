<Page
    x:Class="HyPlayer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:hyPlayer="using:HyPlayer"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:media="using:Windows.UI.Xaml.Media"
    xmlns:controls1="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">
    <Page.Resources>
        <media:AcrylicBrush
            x:Key="PlaybackAcrylicInAppLuminosity"
            BackgroundSource="Backdrop"
            TintOpacity="0.67500003206078"
            TintLuminosityOpacity="0.183000008692034"
            TintColor="Gray"
            FallbackColor="Gray" />
    </Page.Resources>
    <Grid>
        <NavigationView
            Margin="0,0,0,0"
            IsBackButtonVisible="Collapsed"
            IsSettingsVisible="False"
            Background="{ThemeResource SystemControlAcrylicWindowBrush}"
            SelectionChanged="NavMain_OnSelectionChanged"
            x:Name="NavMain">
            <NavigationView.MenuItems>
                <NavigationViewItem
                    Icon="Home"
                    Content="主页"
                    Tag="PageHome" />
                <NavigationViewItem
                    Icon="FourBars"
                    Content="排行"
                    Tag="PageRank" />
                <NavigationViewItem
                    Icon="Zoom"
                    Content="搜索"
                    Tag="PageSearch" />
                <NavigationViewItem
                    Icon="Download"
                    Content="下载"
                    Tag="PageDownload" />
                <NavigationViewItem
                    Icon="Contact"
                    Content="我"
                    Tag="PageMe" />
            </NavigationView.MenuItems>
        </NavigationView>
        <!-- 登录弹窗 -->
        <ContentDialog
            Name="DialogLogin"
            Title="登录"
            PrimaryButtonText="登录"
            CloseButtonText="关闭"
            DefaultButton="Primary">
            
            <StackPanel
                Orientation="Vertical"
                HorizontalAlignment="Center">
                <TextBox PlaceholderText="账号 / 邮箱" Name="TextBoxAccount" />
                <PasswordBox PlaceholderText="密码" Name="TextBoxPassword" />
                <TextBlock
                    Text="登录即代表你同意xxxxxxx"
                    TextWrapping="Wrap" />
                <controls1:InfoBar
                    Name="InfoBarLoginHint"
                    IsOpen="False"/>
                
            </StackPanel>
           
        </ContentDialog>

        <Grid
            Margin="8"
            CornerRadius="4"
            Background="{ThemeResource PlaybackAcrylicInAppLuminosity}"
            VerticalAlignment="Bottom"
            Height="100">
            <hyPlayer:PlayBar />
        </Grid>
    </Grid>
</Page>