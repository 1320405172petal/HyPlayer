<UserControl
    x:Class="HyPlayer.Controls.SongsList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:classes="using:HyPlayer.Classes"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HyPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    mc:Ignorable="d">

    <ListView
        Name="SongContainer"
        Padding="10"
        ItemsSource="{x:Bind Songs}"
        SelectionChanged="SongContainer_SelectionChanged"
        ShowsScrollingPlaceholders="True">
        <ListView.ItemTemplate>
            <DataTemplate x:DataType="classes:NCSong">
                <Grid RightTapped="Grid_RightTapped" Tag="{x:Bind Order}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            x:Name="OrderId"
                            Width="30"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="{x:Bind Order}" />
                        <controls:ImageEx
                            x:Name="ImageRect"
                            Grid.Column="1"
                            Width="75"
                            Height="75"
                            x:Phase="4"
                            CornerRadius="4"
                            EnableLazyLoading="True"
                            IsCacheEnabled="False"
                            IsEnabled="{x:Bind IsAvailable}"
                            Source="{x:Bind Cover}"
                            Stretch="UniformToFill" />
                        <Grid Padding="7,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock
                                    Name="TextBlockSongname"
                                    x:Phase="0"
                                    FontSize="20"
                                    Text="{x:Bind songname}" />
                                <TextBlock
                                    Name="TextBlockTransName"
                                    Margin="5,0,0,0"
                                    x:Phase="0"
                                    FontSize="20"
                                    Foreground="Gray"
                                    Text="{x:Bind ConvertTranslate(transname)}" />
                            </StackPanel>
                            <TextBlock
                                Name="TextBlockAlia"
                                Grid.Row="1"
                                Margin="0,2,0,-6"
                                x:Phase="2"
                                FontSize="12"
                                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                Text="{x:Bind alias}"
                                Visibility="Visible" />
                            <TextBlock
                                Name="TextBlockArtist"
                                Grid.Row="2"
                                Margin="0,7,0,-6"
                                FontSize="12"
                                Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"
                                Text="{x:Bind ArtistString}" />
                            <TextBlock
                                Name="TextBlockAlbum"
                                Grid.Row="3"
                                Margin="0,7,0,0"
                                FontSize="13"
                                Foreground="Gray"
                                Text="{x:Bind Album.name}" />
                        </Grid>
                    </StackPanel>
                    <StackPanel
                        HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Button
                            x:Name="BtnPlay"
                            x:Phase="1"
                            Background="Transparent"
                            Click="BtnPlay_Click"
                            Style="{StaticResource ButtonRevealStyle}"
                            Tag="{x:Bind Order}"
                            ToolTipService.ToolTip="播放"
                            Visibility="{x:Bind IsAvailable}">
                            <FontIcon
                                Name="PlayStateIcon"
                                FontFamily="{StaticResource SymbolThemeFontFamily}"
                                Glyph="&#xEDB5;" />
                        </Button>
                        <Button
                            x:Name="More"
                            x:Phase="3"
                            Background="Transparent"
                            Click="More_Click"
                            Style="{StaticResource ButtonRevealStyle}"
                            Tag="{x:Bind Order}"
                            ToolTipService.ToolTip="更多">
                            <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE10C;" />
                        </Button>
                    </StackPanel>
                    <Grid.ContextFlyout>
                        <MenuFlyout>
                            <MenuFlyoutItem
                                x:Name="FlyoutItemPlay"
                                Click="FlyoutItemPlay_Click"
                                Style="{StaticResource MenuFlyoutItemRevealStyle}"
                                Text="立即播放">
                                <MenuFlyoutItem.Icon>
                                    <SymbolIcon Symbol="Play" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem
                                x:Name="FlyoutItemPlayNext"
                                Click="FlyoutItemPlayNext_Click"
                                Style="{StaticResource MenuFlyoutItemRevealStyle}"
                                Text="下一首播放">
                                <MenuFlyoutItem.Icon>
                                    <SymbolIcon Symbol="Next" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutSeparator />
                            <MenuFlyoutItem
                                x:Name="FlyoutItemSinger"
                                Click="FlyoutItemSinger_Click"
                                Style="{StaticResource MenuFlyoutItemRevealStyle}"
                                Text="歌手">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE716;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem
                                x:Name="FlyoutItemAlbum"
                                Click="FlyoutItemAlbum_Click"
                                Style="{StaticResource MenuFlyoutItemRevealStyle}"
                                Text="专辑">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE93C;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutSeparator />
                            <MenuFlyoutItem
                                x:Name="FlyoutItemComments"
                                Click="FlyoutItemComments_Click"
                                Style="{StaticResource MenuFlyoutItemRevealStyle}"
                                Text="评论"
                                Visibility="{x:Bind local:Common.Setting.notClearMode, Mode=OneWay}">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE8F2;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem
                                x:Name="FlyoutItemDownload"
                                Click="FlyoutItemDownload_Click"
                                Style="{StaticResource MenuFlyoutItemRevealStyle}"
                                Text="下载">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE118;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem
                                x:Name="BtnMV"
                                Click="BtnMV_Click"
                                Style="{StaticResource MenuFlyoutItemRevealStyle}"
                                Text="视频"
                                Visibility="{x:Bind local:Common.Setting.notClearMode, Mode=OneWay}">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE173;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem
                                x:Name="FlyoutCollection"
                                Click="FlyoutCollection_Click"
                                Style="{StaticResource MenuFlyoutItemRevealStyle}"
                                Text="收藏">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE1DA;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem
                                x:Name="Btn_Del"
                                Click="Btn_Del_Click"
                                Foreground="Red"
                                Style="{StaticResource MenuFlyoutItemRevealStyle}"
                                Text="删除"
                                Visibility="{Binding Source=local:SongsList.IsSongList}">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon
                                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                                        Foreground="Red"
                                        Glyph="&#xE107;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </Grid.ContextFlyout>
                </Grid>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</UserControl>
