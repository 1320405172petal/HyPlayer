<UserControl
    x:Class="HyPlayer.Controls.SongsList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="using:Microsoft.Toolkit.Uwp.UI.Behaviors"
    xmlns:classes="using:HyPlayer.Classes"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hycontrols="using:HyPlayer.Controls"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:HyPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="SongListRoot"
    d:DesignHeight="300"
    Loaded="SongListRoot_Loaded"
    mc:Ignorable="d">
    <UserControl.Resources>
        <hycontrols:SongListSelectModeConverter x:Key="SelectModeConverter" />
    </UserControl.Resources>
    <Grid>
        <ListView
            Name="SongContainer"
            Padding="10"
            ItemsSource="{x:Bind VisibleSongs}"
            SelectionChanged="SongContainer_SelectionChanged"
            SelectionMode="{x:Bind MultiSelect, Converter={StaticResource SelectModeConverter}, Mode=OneWay}"
            ShowsScrollingPlaceholders="True">
            <ListView.Footer>
                <ContentControl Margin="0,0,0,130" Content="{x:Bind Footer}" />
            </ListView.Footer>
            <ListView.Header>
                <StackPanel x:Name="HeaderPanel" Orientation="Vertical">
                    <ContentControl Content="{x:Bind ListHeader}" />
                    <Grid ColumnSpacing="12" Margin="0,-45,0,0" Visibility="{x:Bind IsSearchEnabled}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="50" />
                        </Grid.ColumnDefinitions>
                        <TextBox
                            x:Name="FilterBox"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Width="150"
                            controls:DockPanel.Dock="Right" />
                        <Button
                            x:Name="SearchToggle"
                            Grid.Column="2"
                            controls:DockPanel.Dock="Right"
                            Click="FilterBox_OnTextChanged">
                            <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE721;" />
                        </Button>
                        <ToggleButton
                            x:Name="MultiSelectBtn"
                            Grid.Column="3"
                            IsChecked="{x:Bind MultiSelect, Mode=TwoWay}">
                            <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE762;" />
                        </ToggleButton>
                    </Grid>
                </StackPanel>
            </ListView.Header>
            <ListView.ContextFlyout>
                <MenuFlyout>
                    <MenuFlyoutItem
                        x:Name="FlyoutItemPlay"
                        Click="FlyoutItemPlay_Click"
                        Style="{StaticResource MenuFlyoutItemRevealStyle}"
                        Text="立即播放">
                        <MenuFlyoutItem.Icon>
                            <SymbolIcon Symbol="Play" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem
                        x:Name="FlyoutItemPlayNext"
                        Click="FlyoutItemPlayNext_Click"
                        Style="{StaticResource MenuFlyoutItemRevealStyle}"
                        Text="下一首播放">
                        <MenuFlyoutItem.Icon>
                            <SymbolIcon Symbol="Next" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    <MenuFlyoutSeparator />
                    <MenuFlyoutItem
                        x:Name="FlyoutItemSinger"
                        Click="FlyoutItemSinger_Click"
                        Style="{StaticResource MenuFlyoutItemRevealStyle}"
                        Text="歌手">
                        <MenuFlyoutItem.Icon>
                            <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE716;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem
                        x:Name="FlyoutItemAlbum"
                        Click="FlyoutItemAlbum_Click"
                        Style="{StaticResource MenuFlyoutItemRevealStyle}"
                        Text="专辑">
                        <MenuFlyoutItem.Icon>
                            <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE93C;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    <MenuFlyoutSeparator />
                    <MenuFlyoutItem
                        x:Name="FlyoutItemComments"
                        Click="FlyoutItemComments_Click"
                        Style="{StaticResource MenuFlyoutItemRevealStyle}"
                        Text="评论"
                        Visibility="{x:Bind local:Common.Setting.notClearMode, Mode=OneWay}">
                        <MenuFlyoutItem.Icon>
                            <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE8F2;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem
                        x:Name="FlyoutItemDownload"
                        Click="FlyoutItemDownload_Click"
                        Style="{StaticResource MenuFlyoutItemRevealStyle}"
                        Text="下载">
                        <MenuFlyoutItem.Icon>
                            <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE118;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem
                        x:Name="BtnMV"
                        Click="BtnMV_Click"
                        Style="{StaticResource MenuFlyoutItemRevealStyle}"
                        Text="视频"
                        Visibility="{x:Bind local:Common.Setting.notClearMode, Mode=OneWay}">
                        <MenuFlyoutItem.Icon>
                            <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE173;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem
                        x:Name="FlyoutCollection"
                        Click="FlyoutCollection_Click"
                        Style="{StaticResource MenuFlyoutItemRevealStyle}"
                        Text="收藏">
                        <MenuFlyoutItem.Icon>
                            <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE1DA;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem
                        x:Name="Btn_Del"
                        Click="Btn_Del_Click"
                        Foreground="Red"
                        Style="{StaticResource MenuFlyoutItemRevealStyle}"
                        Text="删除"
                        Visibility="{Binding ElementName=SongListRoot, Path=IsMySongList}">
                        <MenuFlyoutItem.Icon>
                            <FontIcon
                                FontFamily="{StaticResource SymbolThemeFontFamily}"
                                Foreground="Red"
                                Glyph="&#xE107;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                </MenuFlyout>
            </ListView.ContextFlyout>
            <ListView.Resources>
                <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                </Style>
            </ListView.Resources>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="classes:NCSong">
                    <Grid
                        HorizontalAlignment="Stretch"
                        Background="Transparent"
                        IsRightTapEnabled="True"
                        Margin="-15,15,0,15"
                        RightTapped="Grid_RightTapped"
                        Tag="{x:Bind Order}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="80" />
                        </Grid.ColumnDefinitions>
                        <Rectangle
                    x:Name="RectangleImageBack"
                    Margin="0,-5,0,-5"
                    Grid.ColumnSpan="2"
                    RadiusX="10"
                    RadiusY="10">
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="{x:Bind Cover}" Stretch="UniformToFill"/>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Rectangle
                    x:Name="RectangleImageAcrylic"
                    Margin="0,-5,0,-5"
                    RadiusX="10"
                    Grid.ColumnSpan="2"
                    RadiusY="10" 
                    Fill="{ThemeResource SystemControlAcrylicElementBrush}">

                        </Rectangle>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock
                                x:Name="OrderId"
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top"
                                Width="48"
                                Margin="12,0,0,0"
                                FontSize="24"
                                Text="{x:Bind DspOrder}"
                                FontWeight="Bold"
                                />
                            <controls:ImageEx
                                x:Name="ImageRect"
                                Width="75"
                                Height="75"
                                x:Phase="4"
                                CornerRadius="4"
                                EnableLazyLoading="True"
                                IsCacheEnabled="False"
                                IsEnabled="{x:Bind IsAvailable}"
                                Source="{x:Bind Cover}"
                                Stretch="UniformToFill" />
                            <Grid Padding="7,0,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel
                                    Grid.Row="0"
                                    Orientation="Horizontal"
                                    Spacing="5">
                                    <TextBlock
                                        Name="TextBlockSongname"
                                        x:Phase="0"
                                        Margin="10,0,0,0"
                                        FontSize="20"
                                        FontWeight="Bold"
                                        Foreground="{x:Bind hycontrols:SongsList.GetBrush(IsAvailable)}"
                                        Text="{x:Bind songname}" />
                                    <TextBlock
                                        Name="TextBlockTransName"
                                        x:Phase="0"
                                        FontSize="20"
                                        Foreground="Gray"
                                        Text="{x:Bind ConvertTranslate(transname)}" />
                                    <Image
                                        Height="20"
                                        Source="/Assets/cloud.png"
                                        Visibility="{x:Bind IsCloud}" />
                                    <Image
                                        Height="20"
                                        Source="/Assets/vip.png"
                                        Visibility="{x:Bind IsVip}" />
                                </StackPanel>
                                <TextBlock
                                    Name="TextBlockAlia"
                                    Grid.Row="1"
                                    Margin="10,2,0,-6"
                                    x:Phase="2"
                                    FontSize="12"
                                    Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                    Text="{x:Bind alias}"
                                    Visibility="Visible" />
                                <TextBlock
                                    Name="TextBlockArtist"
                                    Grid.Row="2"
                                    Margin="10,7,0,-6"
                                    FontSize="12"
                                    Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"
                                    Text="{x:Bind ArtistString}" />
                                <TextBlock
                                    Name="TextBlockAlbum"
                                    Grid.Row="3"
                                    Margin="10,7,0,0"
                                    FontSize="13"
                                    Foreground="Gray"
                                    Text="{x:Bind Album.name}" />
                            </Grid>
                        </StackPanel>

                        <StackPanel
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal"
                            Spacing="8">
                            <Button
                                x:Name="More"
                                x:Phase="3"
                                Width="45"
                                Height="35"
                                CornerRadius="8"
                                Background="{ThemeResource SystemRevealAltLowColor}"
                                Margin="0,0,20,0"
                                Click="More_Click"
                                Style="{StaticResource ButtonRevealStyle}"
                                Tag="{x:Bind Order}"
                                ToolTipService.ToolTip="更多">
                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE10C;" Foreground="{ThemeResource SystemAccentColorLight2}"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>