<UserControl
    d:DesignHeight="300"
    mc:Ignorable="d"
    x:Class="HyPlayer.Controls.SongsList"
    x:Name="SongListRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:classes="using:HyPlayer.Classes"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hycontrols="using:HyPlayer.Controls"
    xmlns:local="using:HyPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid ColumnSpacing="12" Visibility="{x:Bind IsSearchEnabled}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="50" />
            </Grid.ColumnDefinitions>
            <Button
                Click="FilterBox_OnTextChanged"
                Grid.Column="2"
                controls:DockPanel.Dock="Right"
                x:Name="SearchToggle">
                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE721;" />
            </Button>
            <TextBox
                Grid.Column="1"
                Width="150"
                controls:DockPanel.Dock="Right"
                x:Name="FilterBox" />
        </Grid>
        <ListView
            Grid.Row="1"
            ItemsSource="{x:Bind VisibleSongs}"
            Name="SongContainer"
            Padding="10"
            SelectionChanged="SongContainer_SelectionChanged"
            ShowsScrollingPlaceholders="True">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="classes:NCSong">
                    <Grid
                        IsRightTapEnabled="True"
                        RightTapped="Grid_RightTapped"
                        Tag="{x:Bind Order}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                HorizontalAlignment="Center"
                                Text="{x:Bind DspOrder}"
                                VerticalAlignment="Center"
                                Width="30"
                                x:Name="OrderId" />
                            <controls:ImageEx
                                CornerRadius="4"
                                EnableLazyLoading="True"
                                Grid.Column="1"
                                Height="75"
                                IsCacheEnabled="False"
                                IsEnabled="{x:Bind IsAvailable}"
                                Source="{x:Bind Cover}"
                                Stretch="UniformToFill"
                                Width="75"
                                x:Name="ImageRect"
                                x:Phase="4" />
                            <Grid Padding="7,0,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Row="0" Orientation="Horizontal">
                                    <TextBlock
                                        FontSize="20"
                                        Foreground="{x:Bind hycontrols:SongsList.GetBrush(IsAvailable)}"
                                        Name="TextBlockSongname"
                                        Text="{x:Bind songname}"
                                        x:Phase="0" />
                                    <TextBlock
                                        FontSize="20"
                                        Foreground="Gray"
                                        Margin="5,0,0,0"
                                        Name="TextBlockTransName"
                                        Text="{x:Bind ConvertTranslate(transname)}"
                                        x:Phase="0" />
                                </StackPanel>
                                <TextBlock
                                    FontSize="12"
                                    Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                    Grid.Row="1"
                                    Margin="0,2,0,-6"
                                    Name="TextBlockAlia"
                                    Text="{x:Bind alias}"
                                    Visibility="Visible"
                                    x:Phase="2" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"
                                    Grid.Row="2"
                                    Margin="0,7,0,-6"
                                    Name="TextBlockArtist"
                                    Text="{x:Bind ArtistString}" />
                                <TextBlock
                                    FontSize="13"
                                    Foreground="Gray"
                                    Grid.Row="3"
                                    Margin="0,7,0,0"
                                    Name="TextBlockAlbum"
                                    Text="{x:Bind Album.name}" />
                            </Grid>
                        </StackPanel>
                        <StackPanel
                            HorizontalAlignment="Right"
                            Orientation="Horizontal"
                            Spacing="8">
                            <Button
                                Background="Transparent"
                                Click="BtnPlay_Click"
                                Style="{StaticResource ButtonRevealStyle}"
                                Tag="{x:Bind Order}"
                                ToolTipService.ToolTip="播放"
                                Visibility="{x:Bind IsAvailable}"
                                x:Name="BtnPlay"
                                x:Phase="1">
                                <FontIcon
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    Glyph="&#xEDB5;"
                                    Name="PlayStateIcon" />
                            </Button>
                            <Button
                                Background="Transparent"
                                Click="More_Click"
                                Style="{StaticResource ButtonRevealStyle}"
                                Tag="{x:Bind Order}"
                                ToolTipService.ToolTip="更多"
                                x:Name="More"
                                x:Phase="3">
                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE10C;" />
                            </Button>
                        </StackPanel>
                        <Grid.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem
                                    Click="FlyoutItemPlay_Click"
                                    Style="{StaticResource MenuFlyoutItemRevealStyle}"
                                    Text="立即播放"
                                    x:Name="FlyoutItemPlay">
                                    <MenuFlyoutItem.Icon>
                                        <SymbolIcon Symbol="Play" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem
                                    Click="FlyoutItemPlayNext_Click"
                                    Style="{StaticResource MenuFlyoutItemRevealStyle}"
                                    Text="下一首播放"
                                    x:Name="FlyoutItemPlayNext">
                                    <MenuFlyoutItem.Icon>
                                        <SymbolIcon Symbol="Next" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem
                                    Click="FlyoutItemSinger_Click"
                                    Style="{StaticResource MenuFlyoutItemRevealStyle}"
                                    Text="歌手"
                                    x:Name="FlyoutItemSinger">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE716;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem
                                    Click="FlyoutItemAlbum_Click"
                                    Style="{StaticResource MenuFlyoutItemRevealStyle}"
                                    Text="专辑"
                                    x:Name="FlyoutItemAlbum">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE93C;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem
                                    Click="FlyoutItemComments_Click"
                                    Style="{StaticResource MenuFlyoutItemRevealStyle}"
                                    Text="评论"
                                    Visibility="{x:Bind local:Common.Setting.notClearMode, Mode=OneWay}"
                                    x:Name="FlyoutItemComments">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE8F2;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem
                                    Click="FlyoutItemDownload_Click"
                                    Style="{StaticResource MenuFlyoutItemRevealStyle}"
                                    Text="下载"
                                    x:Name="FlyoutItemDownload">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE118;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem
                                    Click="BtnMV_Click"
                                    Style="{StaticResource MenuFlyoutItemRevealStyle}"
                                    Text="视频"
                                    Visibility="{x:Bind local:Common.Setting.notClearMode, Mode=OneWay}"
                                    x:Name="BtnMV">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE173;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem
                                    Click="FlyoutCollection_Click"
                                    Style="{StaticResource MenuFlyoutItemRevealStyle}"
                                    Text="收藏"
                                    x:Name="FlyoutCollection">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE1DA;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem
                                    Click="Btn_Del_Click"
                                    Foreground="Red"
                                    Style="{StaticResource MenuFlyoutItemRevealStyle}"
                                    Text="删除"
                                    Visibility="{Binding ElementName=SongListRoot, Path=IsMySongList}"
                                    x:Name="Btn_Del">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon
                                            FontFamily="{StaticResource SymbolThemeFontFamily}"
                                            Foreground="Red"
                                            Glyph="&#xE107;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </Grid.ContextFlyout>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>