<UserControl
    x:Class="HyPlayer.Controls.SingleComment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HyPlayer.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="70"
    d:DesignWidth="800">

    <Grid>
        <StackPanel Orientation="Horizontal">
            <PersonPicture x:Name="UserAvatar" VerticalAlignment="Stretch" MaxWidth="70" ProfilePicture="{x:Bind AvatarSource}"/>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" >
                <TextBlock x:Name="Nickname" FontSize="12" Text="{x:Bind comment.Nickname}"/>
                <TextBlock x:Name="CommentContent" Text="{x:Bind comment.content}"/>
                <RelativePanel Height="45" HorizontalAlignment="Right">
                    <ToggleButton x:Name="Like" IsChecked="{x:Bind comment.HasLiked}"  ToolTipService.ToolTip="点赞" Click="Like_Click" RelativePanel.AlignRightWithPanel="True" Height="35" Margin="5">
                        <SymbolIcon Symbol="Like"/>
                    </ToggleButton>
                    <Button x:Name="Delete" ToolTipService.ToolTip="删除" Visibility="{x:Bind comment.IsByMyself}" Click="Delete_Click" RelativePanel.LeftOf="Like" Height="35" Margin="5">
                        <SymbolIcon Symbol="Delete"/>
                    </Button>
                    <Button x:Name="Copy" ToolTipService.ToolTip="复制评论" Click="Copy_Click" RelativePanel.LeftOf="Delete" Height="35" Margin="5">
                        <SymbolIcon Symbol="Copy"/>
                    </Button>
                </RelativePanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
