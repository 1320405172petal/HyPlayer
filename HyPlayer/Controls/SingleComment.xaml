<UserControl
    d:DesignHeight="670"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="HyPlayer.Controls.SingleComment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Orientation="Vertical">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70" />
                <ColumnDefinition Width="10" />
                <!--  White Space  -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <PersonPicture
                Grid.Column="0"
                Height="70"
                HorizontalAlignment="Center"
                MaxHeight="70"
                MaxWidth="70"
                ProfilePicture="{x:Bind AvatarSource}"
                Tapped="NavToUser_Click"
                VerticalAlignment="Top"
                Width="70"
                x:Name="UserAvatar" />
            <StackPanel Grid.Column="2" Orientation="Vertical">
                <TextBlock
                    Tapped="NavToUser_Click"
                    Text="{x:Bind comment.Nickname}"
                    x:Name="Nickname" />
                <TextBlock Foreground="Gray" Text="{x:Bind comment.SendTime}" />
                <TextBlock
                    FontSize="17"
                    Margin="0,10,0,0"
                    Text="{x:Bind comment.content}"
                    TextWrapping="Wrap"
                    x:Name="CommentContent" />
                <StackPanel
                    HorizontalAlignment="Left"
                    Margin="0,10,0,0"
                    Orientation="Horizontal"
                    Spacing="10">
                    <ToggleButton
                        Click="Like_Click"
                        Height="35"
                        IsChecked="{x:Bind comment.HasLiked}"
                        Style="{StaticResource ToggleButtonRevealStyle}"
                        ToolTipService.ToolTip="点赞"
                        x:Name="Like">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <SymbolIcon Symbol="Like" />
                            <TextBlock Text="{x:Bind comment.likedCount}" x:Name="LikeCountTB" />
                        </StackPanel>
                    </ToggleButton>
                    <Button
                        Click="Delete_Click"
                        Height="35"
                        Style="{StaticResource ButtonRevealStyle}"
                        ToolTipService.ToolTip="删除"
                        Visibility="{x:Bind comment.IsByMyself}"
                        x:Name="Delete">
                        <SymbolIcon Symbol="Delete" />
                    </Button>
                    <Button
                        Click="Copy_Click"
                        Height="35"
                        RelativePanel.LeftOf="Delete"
                        Style="{StaticResource ButtonRevealStyle}"
                        ToolTipService.ToolTip="复制评论"
                        x:Name="Copy">
                        <SymbolIcon Symbol="Copy" />
                    </Button>
                    <ToggleButton
                        Click="ReplyBtn_Click"
                        Height="35"
                        Style="{StaticResource ToggleButtonRevealStyle}"
                        ToolTipService.ToolTip="回复"
                        x:Name="ReplyBtn">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <SymbolIcon Symbol="Comment" />
                            <TextBlock Text="{x:Bind comment.ReplyCount}" />
                        </StackPanel>
                    </ToggleButton>
                </StackPanel>
            </StackPanel>
        </Grid>


        <Border
            Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"
            CornerRadius="5"
            Margin="5"
            Visibility="Collapsed"
            x:Name="SubCmtsConainer">
            <StackPanel Orientation="Vertical">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="80" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        Grid.Column="0"
                        Height="20"
                        Margin="10"
                        x:Name="ReplyText" />
                    <Button
                        Click="SendReply_Click"
                        Content="回复"
                        Grid.Column="1"
                        Margin="10"
                        Style="{StaticResource ButtonRevealStyle}"
                        x:Name="SendReply" />
                </Grid>
                <StackPanel Margin="10" x:Name="SubCmts" />
                <Button
                    Click="LoadMore_Click"
                    Content="加载更多"
                    CornerRadius="5"
                    HorizontalAlignment="Stretch"
                    Style="{StaticResource ButtonRevealStyle}"
                    x:Name="LoadMore" />
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>