<UserControl
    x:Class="HyPlayer.Controls.SimpleLinerList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:classes="using:HyPlayer.Classes"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hycontrols="using:HyPlayer.Controls"
    xmlns:local="using:HyPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="SongListRoot"
    d:DesignHeight="300"
    mc:Ignorable="d">

    <ListView
        Name="ItemList"
        Padding="10"
        ItemsSource="{x:Bind ListItems}"
        SelectionChanged="ItemList_SelectionChanged"
        ShowsScrollingPlaceholders="True">
        <ListView.ItemTemplate>
            <DataTemplate x:DataType="classes:SimpleListItem">
                <Grid Tag="{x:Bind ResourceId}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            x:Name="OrderId"
                            Width="30"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="{x:Bind DspOrder}" />
                        <controls:ImageEx
                            x:Name="ImageRect"
                            Grid.Column="1"
                            Width="75"
                            Height="75"
                            x:Phase="4"
                            CornerRadius="4"
                            EnableLazyLoading="True"
                            IsCacheEnabled="False"
                            Source="{x:Bind Cover}"
                            Stretch="UniformToFill" />
                        <Grid Padding="7,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                x:Phase="0"
                                FontSize="20"
                                Text="{x:Bind Title}"
                                ToolTipService.ToolTip="{x:Bind Title}" />
                            <TextBlock
                                Name="TextBlockAlia"
                                Grid.Row="1"
                                Margin="0,2,0,-6"
                                x:Phase="2"
                                FontSize="12"
                                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                MaxLines="1"
                                Text="{x:Bind LineOne}"
                                ToolTipService.ToolTip="{x:Bind LineOne}"
                                Visibility="Visible" />
                            <TextBlock
                                Name="TextBlockArtist"
                                Grid.Row="2"
                                Margin="0,7,0,-6"
                                FontSize="12"
                                Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"
                                MaxLines="1"
                                Text="{x:Bind LineTwo}"
                                ToolTipService.ToolTip="{x:Bind LineTwo}" />
                            <TextBlock
                                Name="TextBlockAlbum"
                                Grid.Row="3"
                                Margin="0,7,0,0"
                                FontSize="13"
                                Foreground="Gray"
                                MaxLines="1"
                                Text="{x:Bind LineThree}"
                                ToolTipService.ToolTip="{x:Bind LineThree}" />
                        </Grid>
                    </StackPanel>
                </Grid>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</UserControl>