<UserControl
    x:Class="HyPlayer.Controls.PlaylistItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="200"
    Height="250"
    d:DesignHeight="250"
    d:DesignWidth="200"
    mc:Ignorable="d">
    <Grid
        CornerRadius="8"
        PointerEntered="UIElement_OnPointerEntered"
        PointerExited="UIElement_OnPointerExited"
        PointerCaptureLost="UIElement_OnPointerCaptureLost">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>
            <Grid.Resources>
                <Storyboard x:Name="StoryboardOut">
                    <DoubleAnimation
                        Storyboard.TargetName="Transform"
                        Storyboard.TargetProperty="Y"
                        From="0"
                        To="-20">
                        <DoubleAnimation.EasingFunction>
                            <ExponentialEase EasingMode="EaseOut" Exponent="7" />
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <FadeInThemeAnimation TargetName="PlayAllBtn" />
                </Storyboard>

                <Storyboard x:Name="StoryboardIn">
                    <DoubleAnimation
                        Storyboard.TargetName="Transform"
                        Storyboard.TargetProperty="Y"
                        From="-20"
                        To="0">
                        <DoubleAnimation.EasingFunction>
                            <ExponentialEase EasingMode="EaseOut" Exponent="7" />
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <FadeOutThemeAnimation TargetName="PlayAllBtn" />
                </Storyboard>
            </Grid.Resources>
            <controls:ImageEx
                x:Name="ImageContainer"
                Grid.RowSpan="2"
                Width="200"
                Height="200"
                CornerRadius="8"
                EnableLazyLoading="True"
                IsCacheEnabled="False"
                Tapped="UIElement_OnTapped">
                <controls:ImageEx.RenderTransform>
                    <TranslateTransform x:Name="Transform" />
                </controls:ImageEx.RenderTransform>
            </controls:ImageEx>
            <Button
                x:Name="PlayAllBtn"
                Grid.Row="0"
                Width="50"
                Height="50"
                Margin="0,8,5,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="PlayAllBtn_Click"
                CornerRadius="30"
                Style="{StaticResource AccentButtonStyle}">
                <Button.Content>
                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE102;" />
                </Button.Content>
            </Button>
            <Grid
                x:Name="GridInfo"
                Grid.Row="1"
                Background="{ThemeResource PlayListItemLuminosity}"
                CornerRadius="4"
                Tapped="UIElement_OnTapped">
                <TextBlock
                    x:Name="TextBlockPLAuthor"
                    Width="200"
                    Margin="10,37,19,9"
                    FontSize="10"
                    Foreground="#FF262626"
                    TextWrapping="WrapWholeWords" />
                <TextBlock
                    x:Name="TextBlockPLName"
                    Width="200"
                    Margin="10,12,10,27"
                    FontSize="15"
                    TextWrapping="WrapWholeWords" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>